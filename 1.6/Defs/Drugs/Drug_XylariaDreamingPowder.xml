<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[Mashed_Ashlands_XylariaDreamPowder]==========-->
	<ThingDef ParentName="MakeableDrugBase">
		<defName>Mashed_Ashlands_XylariaDreamPowder</defName>
		<label>xylaria dream powder</label>
		<description>A hallucinogenic powder prepared using xylaria spores. The effects are quite mild while the ingestor is awake. Those that sleep while under the influence of xylaria dream powder experience incredibly vivid and fantastical dreams.</description>
		<descriptionHyperlinks>
			<HediffDef>Mashed_Ashlands_XylariaDreamPowderHigh</HediffDef>
			<HediffDef>Mashed_Ashlands_XylariaDreamPowderTolerance</HediffDef>
			<HediffDef>Mashed_Ashlands_XylariaDreamPowderAddiction</HediffDef>
		</descriptionHyperlinks>
		<possessionCount>6</possessionCount>
		<graphicData>
			<graphicClass>Graphic_StackCount</graphicClass>
			<drawSize>1</drawSize>
			<texPath>Things/Item/Drug/Mashed_Ashlands_XylariaDreamPowder</texPath>
		</graphicData>
		<statBases>
			<WorkToMake>450</WorkToMake>
			<DeteriorationRate>0.6</DeteriorationRate>
			<Mass>0.06</Mass>
			<Flammability>0.6</Flammability>
			<!--<MarketValue>33</MarketValue>-->
		</statBases>
		<techLevel>Medieval</techLevel>
		<rotatable>false</rotatable>
		<stackLimit>50</stackLimit>
		<ingestible>
			<preferability>NeverForNutrition</preferability>
			<foodType>Processed</foodType>
			<joyKind>Chemical</joyKind>
      		<joy>0.3</joy>
			<nurseable>true</nurseable>
			<drugCategory>Social</drugCategory>
			<ingestSound>Ingest_Snort</ingestSound>
			<ingestHoldOffsetStanding>
				<northDefault>
					<offset>(0.18,0,0)</offset>
				</northDefault>
			</ingestHoldOffsetStanding>
			<ingestCommandString>Ingest {0}</ingestCommandString>
			<ingestReportString>Ingesting {0}.</ingestReportString>
			<chairSearchRadius>25</chairSearchRadius>
			<canAutoSelectAsFoodForCaravan>false</canAutoSelectAsFoodForCaravan>
			<useEatingSpeedStat>false</useEatingSpeedStat>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>Mashed_Ashlands_XylariaDreamPowderHigh</hediffDef>
					<severity>0.75</severity>
					<toleranceChemical>Mashed_Ashlands_XylariaDreamPowder</toleranceChemical>
				</li>
				<li Class="IngestionOutcomeDoer_GiveHediff">
					<hediffDef>Mashed_Ashlands_XylariaDreamPowderTolerance</hediffDef>
					<toleranceChemical>Mashed_Ashlands_XylariaDreamPowder</toleranceChemical>
					<severity>0.040</severity>
					<divideByBodySize>true</divideByBodySize>
					<multiplyByGeneToleranceFactors>true</multiplyByGeneToleranceFactors>
				</li>
			</outcomeDoers>
		</ingestible>
		<comps>
			<li Class="CompProperties_Drug">
				<chemical>Mashed_Ashlands_XylariaDreamPowder</chemical>
				<addictiveness>0.01</addictiveness>
				<existingAddictionSeverityOffset>0.20</existingAddictionSeverityOffset>
				<needLevelOffset>0.9</needLevelOffset>
				<isCombatEnhancingDrug>true</isCombatEnhancingDrug>
				<listOrder>999</listOrder>
				<overdoseSeverityOffset>0.18~0.35</overdoseSeverityOffset>
				<largeOverdoseChance>0.01</largeOverdoseChance>
			</li>
		</comps>
		<recipeMaker>
			<researchPrerequisites>
				<li>Mashed_Ashlands_AshSurvival_Advanced</li>
			</researchPrerequisites>
			<skillRequirements>
				<Intellectual>6</Intellectual>
			</skillRequirements>
			<recipeUsers>
				<li>CraftingSpot</li>
				<li>DrugLab</li>
				<li MayRequire="dankpyon.medieval.overhaul">DankPyon_AlchemyBench</li>
			</recipeUsers>
			<productCount>1</productCount>
		</recipeMaker>
		<costList>
			<Mashed_Ashlands_RawXylariaSpores>3</Mashed_Ashlands_RawXylariaSpores>
		</costList>
		<tradeTags>
			<li>Mashed_Ashlands_AshlandsDrug</li>
		</tradeTags>
		<allowedArchonexusCount>50</allowedArchonexusCount>
	</ThingDef>
	<!-- ==========[Mashed_Ashlands_XylariaDreamPowderHigh]==========-->
	<HediffDef>
		<defName>Mashed_Ashlands_XylariaDreamPowderHigh</defName>
		<label>high on xylaria dream powder</label>
		<description>Active xylaria dream powder in the bloodstream. Generates a moderate hallucinogenic high while awake, and greatly enhances dreams while asleep.\n\nWhile generally safe to ingest, xylaria dream powder is mildly addictive.</description>
		<hediffClass>Hediff_High</hediffClass>
		<defaultLabelColor>(1,0,0.5)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1.0</maxSeverity>
		<isBad>false</isBad>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.6</severityPerDay>
				<showHoursToRecover>true</showHoursToRecover>
			</li>
		</comps>
		<stages>
			<li>
				<statOffsets>
					<PsychicSensitivity>0.3</PsychicSensitivity>
					<RestFallRateFactor>0.3</RestFallRateFactor>
					<RestRateMultiplier>0.3</RestRateMultiplier>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
	<!-- ==========[Mashed_Ashlands_XylariaDreamPowderHigh]==========-->
	<ThoughtDef>
		<defName>Mashed_Ashlands_XylariaDreamPowderHigh</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>Mashed_Ashlands_XylariaDreamPowderHigh</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
		<stages>
			<li>
				<label>high on xylaria dream powder</label>
				<description>If I'm already seeing hallucinations now, I wonder how vivid my dreams are going to be.</description>
				<baseMoodEffect>6</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<!-- ==========[Mashed_Ashlands_XylariaDreamPowderDreams]==========-->
	<ThoughtDef>
		<defName>Mashed_Ashlands_XylariaDreamPowderDreams</defName>
		<durationDays>1</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>xylaria dream powder dreams</label>
				<description>Those dreams were so surreal. It felt like I was really there.</description>
				<baseMoodEffect>30</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<!-- ==========[Mashed_Ashlands_XylariaDreamPowder]==========-->
	<ChemicalDef>
		<defName>Mashed_Ashlands_XylariaDreamPowder</defName>
		<label>xylaria dream powder</label>
		<addictionHediff>Mashed_Ashlands_XylariaDreamPowderAddiction</addictionHediff>
		<toleranceHediff>Mashed_Ashlands_XylariaDreamPowderTolerance</toleranceHediff>
		<onGeneratedAddictedToleranceChance>0.6</onGeneratedAddictedToleranceChance>
		<geneToleranceBuildupFactorResist>0.5</geneToleranceBuildupFactorResist>
		<geneToleranceBuildupFactorImmune>0</geneToleranceBuildupFactorImmune>
		<geneOverdoseChanceFactorResist>0.5</geneOverdoseChanceFactorResist>
		<geneOverdoseChanceFactorImmune>0</geneOverdoseChanceFactorImmune>
	</ChemicalDef>
	<!-- ==========[Mashed_Ashlands_XylariaDreamPowder]==========-->
	<NeedDef ParentName="DrugAddictionNeedBase">
		<defName>Mashed_Ashlands_XylariaDreamPowder</defName>
		<needClass>Need_Chemical</needClass>
		<label>xylaria dream powder</label>
		<description>Because of a xylaria dream powder addiction, this person needs to regularly consume the drug to avoid withdrawal symptoms.</description>
		<listPriority>50</listPriority>
	</NeedDef>
	<!-- ==========[Mashed_Ashlands_XylariaDreamPowderHigh]==========-->
	<HediffDef ParentName="DrugToleranceBase">
		<defName>Mashed_Ashlands_XylariaDreamPowderTolerance</defName>
		<label>xylaria dream powder tolerance</label>
		<description>A built-up tolerance to xylaria dream powder. The more severe this tolerance is, the more xylaria dream powder it takes to get the same effect.</description>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.015</severityPerDay>
			</li>
			<li Class="HediffCompProperties_DrugEffectFactor">
				<chemical>Mashed_Ashlands_XylariaDreamPowder</chemical>
			</li>
		</comps>
	</HediffDef>
	<!-- ==========[Mashed_Ashlands_XylariaDreamPowderAddiction]==========-->
	<HediffDef ParentName="AddictionBase">
		<defName>Mashed_Ashlands_XylariaDreamPowderAddiction</defName>
		<label>xylaria dream powder addiction</label>
		<description>A chemical addiction to xylaria dream powder. Long-term presence of xylaria dream powder has caused neurological adaptations at the cellular level, so the brain can no longer function properly without the drug.
\nWithout regular doses of xylaria dream powder, withdrawal symptoms will begin. However, extended abstinence will force the brain to adapt back to its normal state, resolving the addiction.</description>
		<hediffClass>Hediff_Addiction</hediffClass>
		<chemicalNeed>Chemical_Psychite</chemicalNeed>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>-0.0333</severityPerDay>
				<showDaysToRecover>true</showDaysToRecover>
			</li>
		</comps>
		<stages>
			<li>
			</li>
			<li>
				<label>withdrawal</label>
				<statOffsets>
					<RestFallRateFactor>0.6</RestFallRateFactor>
					<RestRateMultiplier>-0.6</RestRateMultiplier>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>-0.2</offset>
					</li>
				</capMods>
				<mentalStateGivers>
					<li>
						<mentalState>WanderConfused</mentalState>
						<mtbDays>10</mtbDays>
					</li>
				</mentalStateGivers>
			</li>
		</stages>
	</HediffDef>
	<!-- ==========[Mashed_Ashlands_XylariaDreamPowderWithdrawl]==========-->
	<ThoughtDef>
		<defName>Mashed_Ashlands_XylariaDreamPowderWithdrawl</defName>
		<workerClass>ThoughtWorker_Hediff</workerClass>
		<hediff>Mashed_Ashlands_XylariaDreamPowderAddiction</hediff>
		<validWhileDespawned>true</validWhileDespawned>
		<developmentalStageFilter>Baby, Child, Adult</developmentalStageFilter>
		<stages>
			<li>
				<visible>false</visible>
			</li>
			<li>
				<label>xylaria dream powder withdrawal</label>
				<description>My dreams are so boring now. What's the point of sleeping.</description>
				<baseMoodEffect>-30</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
</Defs>
