<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[Mashed_Ashlands_Plant_SulphurFungus]==========-->
	<ThingDef ParentName="Mashed_Ashlands_SmallMushroomBase">
		<defName>Mashed_Ashlands_Plant_SulphurFungus</defName>
		<label>sulphur entoloma</label>
		<description>A small mushroom only found growing near sulphur pools. Many enjoy the sight of its striking yellow colouration.</description>
		<statBases>
			<Beauty>6</Beauty>
			<BeautyOutdoors>6</BeautyOutdoors>
			<Flammability>0.2</Flammability>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Mushrooms/Mashed_Ashlands_SulphurFungus</texPath>
		</graphicData>
		<plant>
			<sowTags Inherit="False"/>
			<wildTerrainTags>
				<li>Mashed_Ashlands_Sulphur</li>
			</wildTerrainTags>
			<growDays>3</growDays>
			<visualSizeRange>0.2~0.4</visualSizeRange>
			<completelyIgnoreFertility>true</completelyIgnoreFertility>
			<maxGrowthTemperature>75</maxGrowthTemperature>
		</plant>
	</ThingDef>
	<!-- ==========[Mashed_Ashlands_GiantSulphuricCoprinus]==========-->
	<ThingDef ParentName="Mashed_Ashlands_Plant_TreeDecorativeBase">
		<defName>Mashed_Ashlands_GiantSulphuricCoprinus</defName>
		<label>sulphuric coprinus tree</label>
		<description>A large fungal tree, solely found growing around sulphur pools. While it offers nothing of practical use, most find it incredibly beautiful.</description>
		<graphicData>
			<texPath>Things/Plant/Trees/Mashed_Ashlands_GiantSulphuricCoprinus</texPath>
		</graphicData>
		<statBases>
			<Beauty>20</Beauty>
			<BeautyOutdoors>20</BeautyOutdoors>
			<Mashed_Ashlands_AshResistance>1</Mashed_Ashlands_AshResistance>
		</statBases>
		<plant>
			<sowResearchPrerequisites Inherit="False"/>
			<sowTags Inherit="False"/>
			<wildTerrainTags>
				<li>Mashed_Ashlands_Sulphur</li>
			</wildTerrainTags>
			<growDays>20</growDays>
			<visualSizeRange>1.3~2.4</visualSizeRange>
			<harvestWork>600</harvestWork>
			<completelyIgnoreFertility>true</completelyIgnoreFertility>
			<leaflessGraphicPath>Things/Plant/Trees/Mashed_Ashlands_GiantSulphuricCoprinus_Leafless</leaflessGraphicPath>
			<maxGrowthTemperature>75</maxGrowthTemperature>
		</plant>
	</ThingDef>
</Defs>
