<Defs>
	<!-- ==========[Mashed_Ashlands_FlowerBase]==========-->
	<ThingDef ParentName="PlantBase" Name="Mashed_Ashlands_FlowerBase" Abstract="True">
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.25</Nutrition>
			<Mashed_Ashlands_AshResistance>0.2</Mashed_Ashlands_AshResistance>
		</statBases>
		<graphicData>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible/>
		<plant>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>2.5</growDays>
			<sowTags>
				<li>Ground</li>
				<li>Mashed_Ashlands_Ash</li>
				<li>Mashed_Ashlands_AshPlanter</li>
			</sowTags>
			<fertilityMin>0.05</fertilityMin>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>0.6~1.0</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>8</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
	</ThingDef>
	<!-- ==========[Mashed_Ashlands_Plant_AshenHeatherFlower]==========-->
	<ThingDef ParentName="Mashed_Ashlands_FlowerBase">
		<defName>Mashed_Ashlands_Plant_AshenHeatherFlower</defName>
		<label>ashen heather</label>
		<description>A particularly resilient strain of heather that can be found growing in certain ashland regions.</description>
		<modExtensions>
			<li Class="Mashed_Ashlands.PlantProperties">
				<ashlandFlowerPlant>true</ashlandFlowerPlant>
				<disallowedTerrainForWild>
					<li>Mashed_Ashlands_RichAshSoil</li>
					<li>Mashed_Ashlands_MossyAshSoil</li>
					<li>Mashed_Ashlands_SulphuricSand</li>
				</disallowedTerrainForWild>
			</li>
		</modExtensions>
		<statBases>
			<Beauty>6</Beauty>
			<BeautyOutdoors>6</BeautyOutdoors>
			<Mashed_Ashlands_AshResistance>0.6</Mashed_Ashlands_AshResistance>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Flowers/Mashed_Ashlands_AshenHeatherFlower</texPath>
		</graphicData>
		<plant>
			<sowResearchPrerequisites>
				<li>Mashed_Ashlands_AshSowing_Intermediate</li>
			</sowResearchPrerequisites>
			<maxMeshCount>25</maxMeshCount>
			<visualSizeRange>0.7~0.8</visualSizeRange>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>200</wildClusterWeight>
		</plant>
	</ThingDef>
