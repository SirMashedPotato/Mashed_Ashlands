<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ==========[Mashed_Ashlands_NullCondition]==========-->
	<Mashed_Ashlands.VolcanicConditionDef>
		<defName>Mashed_Ashlands_NullCondition</defName>
		<label>volcanic inactivity</label>
		<description>The volcano goes, relatively, silent.</description>
		<baseDurationDays>0</baseDurationDays>
		<baseGraceDays>2~10</baseGraceDays>
		<isNullCondition>true</isNullCondition>
		<sendLetter>false</sendLetter>
		<sendEndMessage>false</sendEndMessage>
		<countAsIncident>false</countAsIncident>
	</Mashed_Ashlands.VolcanicConditionDef>
