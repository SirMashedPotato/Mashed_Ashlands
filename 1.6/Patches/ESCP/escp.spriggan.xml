<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>ESCP - Spriggan</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- ==========[ESCP_Spriggan_Parasol]========== -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="ESCP_Spriggan_Parasol"]/comps/li[@Class="CompProperties_Shearable"]/woolDef</xpath>
					<value>
						<woolDef>Mashed_Ashlands_RawAshFungus</woolDef>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="ESCP_Spriggan_Parasol"]/race</xpath>
					<value>
						<leatherDef>Mashed_Ashlands_ParasolWoodLog</leatherDef>
					</value>
				</li>
				<!-- ==========[ESCP_SprigganThingBase]========== -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="ESCP_SprigganThingBase"]/statBases</xpath>
					<value>
						<Mashed_Ashlands_AshResistance>1</Mashed_Ashlands_AshResistance>
					</value>
				</li>
				<!-- ==========[ESCP_SprigganTreeBase]========== -->
				<li Class="PatchOperationConditional">
					<xpath>Defs/ThingDef[@Name="ESCP_SprigganTreeBase"]</xpath>
					<match Class="PatchOperationAdd">
						<xpath>Defs/ThingDef[@Name="ESCP_SprigganTreeBase"]/statBases</xpath>
						<value>
							<Mashed_Ashlands_AshResistance>1</Mashed_Ashlands_AshResistance>
						</value>
					</match>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
