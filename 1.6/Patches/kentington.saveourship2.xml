<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Save Our Ship 2</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAddModExtension">
					<xpath>Defs/BiomeDef[defName="OuterSpaceBiome"]</xpath>
					<value>
						<li Class="Mashed_Ashlands.PreventVolcanicConditions"/>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="ArchoAnimalThingBase" or @Name="ArchoBigBirdThingBase"]/statBases</xpath>
					<value>
						<Mashed_Ashlands_AshResistance>1</Mashed_Ashlands_AshResistance>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/HediffDef[defName="SoSHologram" or defName="SoSHologramMachine"]/stages/li/statOffsets</xpath>
					<value>
						<Mashed_Ashlands_AshResistance>0.5</Mashed_Ashlands_AshResistance>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/HediffDef[defName="SoSHologramArchotech"]/stages/li/statOffsets</xpath>
					<value>
						<Mashed_Ashlands_AshResistance>0.9</Mashed_Ashlands_AshResistance>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
