<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[Mashed_Ashlands_AbandonedMineEntrance]==========-->
	<ThingDef ParentName="BuildingBase">
		<defName>Mashed_Ashlands_AbandonedMineEntrance</defName>
		<label>abandoned mine entrance</label>
		<description>The entrance to a long-abandoned mine. It can be opened to access the caverns below.</description>
		<size>(3,3)</size>
		<useHitPoints>false</useHitPoints>
		<thingClass>Mashed_Ashlands.AbandonedMineEntrance</thingClass> <!-- TODO -->
		<rotatable>false</rotatable>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<canOverlapZones>false</canOverlapZones>
		<tickerType>Normal</tickerType>
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<texPath>Things/Building/Natural/Mashed_Ashlands_CaveEntrance/Mashed_Ashlands_CaveEntranceBlocked</texPath>
			<drawSize>(3, 3)</drawSize>
		</graphicData>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<fillPercent>0</fillPercent>
		<passability>Impassable</passability>
		<holdsRoof>true</holdsRoof>
		<destroyable>false</destroyable>
		<building>
			<isEdifice>true</isEdifice>
			<deconstructible>false</deconstructible>
			<isTargetable>false</isTargetable>
			<isInert>true</isInert>
			<claimable>false</claimable>
			<expandHomeArea>false</expandHomeArea>
		</building>
		<portal>
			<pocketMapGenerator>InsectLair</pocketMapGenerator> <!-- TODO -->
			<exitDef>CaveExit</exitDef>
			<!--<pocketMapSize>75</pocketMapSize>-->
		</portal>
		<statBases>
			<Flammability>0</Flammability>
		</statBases>
		<comps>
			<li Class="CompProperties_Hackable"> <!-- TODO -->
				<defence>39000</defence>
				<effectHacking>HackingTerminal</effectHacking>
				<lockoutDurationHoursRange>6~18</lockoutDurationHoursRange>
				<showProgressAfterHackCompletion>false</showProgressAfterHackCompletion>
				<notHackedInspectString>Hack to open.</notHackedInspectString>
				<intellectualSkillPrerequisite>4</intellectualSkillPrerequisite>
				<hackingCompletedSound>AncientHatchOpened</hackingCompletedSound>
				<hackedMessage>{HACKER_labelShort} has finished hacking {SUBJECT_labelNoParenthesisDef}.</hackedMessage>
			</li>
			<li Class="CompProperties_Sealable">
				<sealTexPath>UI/Commands/FillInCaveEntrance</sealTexPath>
				<sealCommandLabel>Seal mine entrance</sealCommandLabel>
				<sealCommandDesc>Choose a colonist to permanently seal the entrance. Anything or anyone left below will be lost forever.</sealCommandDesc>
				<cannotSealLabel>Cannot seal</cannotSealLabel>
				<confirmSealText>Sealing the mine entrance is permanent. Anything or anyone left below will be lost forever.{0}\n\nAre you sure you want to continue?</confirmSealText>
				<destroyPortal>true</destroyPortal>
			</li>
		</comps>
		<inspectorTabs>
			<li>ITab_ContentsMapPortal</li>
		</inspectorTabs>
	</ThingDef>
</Defs>
