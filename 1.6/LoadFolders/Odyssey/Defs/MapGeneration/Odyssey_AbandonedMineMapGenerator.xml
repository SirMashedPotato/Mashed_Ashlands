<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[Mashed_Ashlands_AbandonedMine]==========-->
	<!-- ebony, glass, kwama eggs spawned based on mine type -->
	<MapGeneratorDef>
		<defName>Mashed_Ashlands_AbandonedMine</defName>
		<label>abandoned mine</label>
		<isUnderground>true</isUnderground>
		<forceCaves>true</forceCaves>
		<ignoreAreaRevealedLetter>true</ignoreAreaRevealedLetter>
		<disableCallAid>true</disableCallAid>
		<pocketMapProperties>
			<biome>Mashed_Ashlands_AshlandsUnderground</biome>
			<temperature>15</temperature>
			<tileMutators>
				<li>UndergroundCave</li>
			</tileMutators>
		</pocketMapProperties>
		<genSteps>
			<li>ElevationFertility</li>
			<li>MutatorPostElevationFertility</li>
			<li>Mashed_Ashlands_AbandonedMine_RocksFromGrid</li>
			<li>Terrain</li>
			<li>MutatorPostTerrain</li>
			<!--<li>Underground_ScatterRuinsSimple</li>-->
			<li>MutatorCriticalStructures</li>
			<li>MutatorNonCriticalStructures</li>
			<li>Mashed_Ashlands_DeadExplorer</li>			<!-- cave version-->
			<li>RockChunks</li>
			<li>PlaceCaveExit</li>
			<!--<li>InsectLair_Cave</li>-->
			<!--<li>InsectLair_GlowPods</li>-->
			<li>Plants</li>
			<li>MutatorFinal</li>
			<!-- cave ins -->
			<li>Fog</li>
		</genSteps>
	</MapGeneratorDef>
	<!-- ==========[Mashed_Ashlands_AbandonedMine]==========-->
	<GenStepDef>
		<defName>Mashed_Ashlands_AbandonedMine_RocksFromGrid</defName>
		<order>200</order>
		<genStep Class="GenStep_RocksFromGrid">
			<overrideBlotchesPer10kCells>0</overrideBlotchesPer10kCells>
		</genStep>
	</GenStepDef>
	<!-- ==========[Mashed_Ashlands_AbandonedMine_EbonyLumps]==========-->
	<GenStepDef>
		<defName>Mashed_Ashlands_AbandonedMine_EbonyLumps</defName>
		<order>300</order>
		<genStep Class="GenStep_ScatterLumpsMineable">
			<forcedDefToScatter>Mashed_Ashlands_MineableEbony</forcedDefToScatter>
			<forcedLumpSize>6</forcedLumpSize>
			<countPer10kCellsRange>30~60</countPer10kCellsRange>
		</genStep>
	</GenStepDef>
	<!-- ==========[Mashed_Ashlands_AbandonedMine_GlassLumps]==========-->
	<GenStepDef>
		<defName>Mashed_Ashlands_AbandonedMine_GlassLumps</defName>
		<order>300</order>
		<genStep Class="GenStep_ScatterLumpsMineable">
			<forcedDefToScatter>Mashed_Ashlands_MineableGlass</forcedDefToScatter>
			<forcedLumpSize>6</forcedLumpSize>
			<countPer10kCellsRange>30~60</countPer10kCellsRange>
		</genStep>
	</GenStepDef>
	<!-- ==========[Mashed_Ashlands_AbandonedMine_KwamaEggs]==========-->
	<GenStepDef>
		<defName>Mashed_Ashlands_AbandonedMine_KwamaEggs</defName>
		<order>960</order>
		<genStep Class="GenStep_ScatterGroup">
			<groups>
				<li>
					<things>
						<Mashed_Ashlands_KwamaEggSac>1</Mashed_Ashlands_KwamaEggSac>
						<Mashed_Ashlands_GoldKwamaEggSac>0.06</Mashed_Ashlands_GoldKwamaEggSac>
					</things>
					<spawnAtCenter>Mashed_Ashlands_KwamaEggSac</spawnAtCenter>
					<indoorRuin>false</indoorRuin>
					<filthDef>Mashed_Ashlands_Filth_KwamaSlime</filthDef>
					<filthExpandBy>1</filthExpandBy>
					<filthChance>0.3</filthChance>
					<coveredCellsPer10Cells>1~2</coveredCellsPer10Cells>
					<clusterRectRadius>1~3</clusterRectRadius>
				</li>
			</groups>
			<spotMustBeStandable>true</spotMustBeStandable>
			<countPer10kCellsRange>30~60</countPer10kCellsRange>
			<minSpacing>6</minSpacing>
			<validators>
				<li Class="ScattererValidator_Buildable">
					<radius>1</radius>
					<affordance>Heavy</affordance>
				</li>
				<li Class="ScatterValidator_AvoidUsedRects"/>
			</validators>
		</genStep>
	</GenStepDef>
</Defs>
