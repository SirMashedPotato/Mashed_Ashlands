<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[Mashed_Ashlands_VolcanicDebrisField]==========-->
	<GenStepDef>
		<defName>Mashed_Ashlands_AbandonedMineEntrance</defName>
		<order>900</order>
		<genStep Class="GenStep_ScatterThings">
			<thingDef>Mashed_Ashlands_AbandonedMineEntrance</thingDef>
			<spotMustBeStandable>true</spotMustBeStandable>
			<clearSpaceSize>30</clearSpaceSize>
			<terrainValidationRadius>5</terrainValidationRadius>
			<terrainValidationDisallowed>
				<li>Road</li>
			</terrainValidationDisallowed>
			<count>1</count>
			<validators>
				<li Class="ScattererValidator_Buildable">
					<radius>3</radius>
					<affordance>Heavy</affordance>
				</li>
				<li Class="ScattererValidator_NoNonNaturalEdifices">
					<radius>3</radius>
				</li>
				<li Class="ScattererValidator_AvoidSpecialThings"/>
			</validators>
		</genStep>
	</GenStepDef>
	<!-- ==========[Mashed_Ashlands_DustAntHives_Increased]==========-->
	<GenStepDef ParentName="Mashed_Ashlands_DustAntHivesBase">
		<defName>Mashed_Ashlands_DustAntHives_Increased</defName>
		<genStep Class="GenStep_ScatterThings">
			<minSpacing>15</minSpacing>
			<countPer10kCellsRange>0.6~3</countPer10kCellsRange>
		</genStep>
	</GenStepDef>
	<!-- ==========[Mashed_Ashlands_FetcherflyHives_Increased]==========-->
	<GenStepDef ParentName="Mashed_Ashlands_FetcherflyHivesBase">
		<defName>Mashed_Ashlands_FetcherflyHives_Increased</defName>
		<genStep Class="GenStep_ScatterThings">
			<minSpacing>15</minSpacing>
			<countPer10kCellsRange>0.25~0.75</countPer10kCellsRange>
		</genStep>
	</GenStepDef>
	<!-- ==========[Mashed_Ashlands_StriderShells_Increased]==========-->
	<GenStepDef ParentName="Mashed_Ashlands_StriderShellsBase">
		<defName>Mashed_Ashlands_StriderShells_Increased</defName>
		<genStep Class="GenStep_ScatterThings">
			<minSpacing>9</minSpacing>
			<countPer10kCellsRange>3~6</countPer10kCellsRange>
		</genStep>
	</GenStepDef>
	<!-- ==========[Mashed_Ashlands_VolcanicDebrisField]==========-->
	<GenStepDef>
		<defName>Mashed_Ashlands_VolcanicDebrisField</defName>
		<order>960</order>
		<genStep Class="GenStep_ScatterThings">
			<thingDef>Mashed_Ashlands_VolcanicDebris</thingDef>
			<spotMustBeStandable>true</spotMustBeStandable>
			<allowInWaterBiome>false</allowInWaterBiome>
			<minSpacing>13</minSpacing>
			<extraNoBuildEdgeDist>3</extraNoBuildEdgeDist>
			<countPer10kCellsRange>3~6</countPer10kCellsRange>
			<clearSpaceSize>30</clearSpaceSize>
			<terrainValidationRadius>3</terrainValidationRadius>
			<validators>
				<li Class="ScattererValidator_Buildable">
					<radius>3</radius>
					<affordance>Heavy</affordance>
				</li>
				<li Class="ScattererValidator_NoNonNaturalEdifices">
					<radius>3</radius>
				</li>
			</validators>
		</genStep>
	</GenStepDef>
</Defs>
