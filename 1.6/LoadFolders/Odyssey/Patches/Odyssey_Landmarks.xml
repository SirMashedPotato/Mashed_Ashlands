<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<!-- ==========[Archean tree]==========-->
	<!--
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/LandmarkDef[mutatorChances/ArcheanTrees]/mutatorChances</xpath>
		<value>
			<Mashed_Ashlands_AshcheanTrees>0.1</Mashed_Ashlands_AshcheanTrees>
		</value>
	</Operation>
	-->
	<!-- ==========[Caves]==========-->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/LandmarkDef[defName="Valley"
			or defName="Chasm"
			or defName="Plateau"
			or defName="Cliffs"
			or defName="Hollow"
			or defName="Basin"]/mutatorChances</xpath>
		<value>
			<Mashed_Ashlands_SulphuricCaves>0.15</Mashed_Ashlands_SulphuricCaves>
			<Mashed_Ashlands_EbonyDeposits>0.03</Mashed_Ashlands_EbonyDeposits>
			<Mashed_Ashlands_GlassDeposits>0.03</Mashed_Ashlands_GlassDeposits>
			<Mashed_Ashlands_AbandonedMine>0.06</Mashed_Ashlands_AbandonedMine>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/LandmarkDef[defName="Valley"
			or defName="Cavern"
			or defName="Chasm"
			or defName="Cliffs"
			or defName="Hollow"]/comboLandmarkMutators</xpath>
		<value>
			<Mashed_Ashlands_SulphuricPond>0.02</Mashed_Ashlands_SulphuricPond>
			<Mashed_Ashlands_ThermalPond>0.02</Mashed_Ashlands_ThermalPond>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/LandmarkDef[defName="Plateau"
			or defName="TerraformingScar"]/comboLandmarkMutators</xpath>
		<value>
			<Mashed_Ashlands_SulphuricPond>0.05</Mashed_Ashlands_SulphuricPond>
			<Mashed_Ashlands_ThermalPond>0.05</Mashed_Ashlands_ThermalPond>
		</value>
	</Operation>
	<!-- ==========[Coasts]==========-->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/LandmarkDef[defName="Archipelago"
			or defName="CoastalIsland"
			or defName="Peninsula"
			or @Name="BaseBay"
			or defName="Fjord"
			or defName="CoastalAtoll"]/mutatorChances</xpath>
		<value>
			<Mashed_Ashlands_BasaltCoast>0.1</Mashed_Ashlands_BasaltCoast>
			<Mashed_Ashlands_LandCoral>0.2</Mashed_Ashlands_LandCoral>
			<Mashed_Ashlands_LandCoralVolcanic>0.2</Mashed_Ashlands_LandCoralVolcanic>
		</value>
	</Operation>
	<!-- ==========[Lava]==========-->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/LandmarkDef[@Name="BaseLavaLake" 
			or defName="LavaFlow"]/mutatorChances</xpath>
		<value>
			<Mashed_Ashlands_EbonyDeposits>0.06</Mashed_Ashlands_EbonyDeposits>
			<Mashed_Ashlands_GlassDeposits>0.06</Mashed_Ashlands_GlassDeposits>
			<Mashed_Ashlands_FetcherflyHives_Increased>0.1</Mashed_Ashlands_FetcherflyHives_Increased>
			<Mashed_Ashlands_AbandonedMine>0.03</Mashed_Ashlands_AbandonedMine>
		</value>
	</Operation>
	<!-- ==========[Man made]==========-->
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/LandmarkDef[@Name="BaseRuins"
			or @Name="AbandonedColonyLandmarkBase"]/comboLandmarkMutators</xpath>
		<value>
			<Mashed_Ashlands_DusttideMutator>0.02</Mashed_Ashlands_DusttideMutator>
			<Mashed_Ashlands_SulphuricPond>0.02</Mashed_Ashlands_SulphuricPond>
			<Mashed_Ashlands_SulphuricSprings>0.02</Mashed_Ashlands_SulphuricSprings>
			<Mashed_Ashlands_ThermalMudPools>0.02</Mashed_Ashlands_ThermalMudPools>
			<Mashed_Ashlands_ThermalPond>0.02</Mashed_Ashlands_ThermalPond>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/LandmarkDef[defName="AncientQuarry"
			or @Name="AncientStructureBase"]/comboLandmarkMutators</xpath>
		<value>
			<Mashed_Ashlands_SulphuricSprings>0.02</Mashed_Ashlands_SulphuricSprings>
			<Mashed_Ashlands_ThermalMudPools>0.02</Mashed_Ashlands_ThermalMudPools>
		</value>
	</Operation>
</Patch>
