	<!-- ==========[MorrowRim_ChunkBasalt]==========-->
	<ThingDef ParentName="ChunkRockBase">
		<defName>MorrowRim_ChunkBasalt</defName>
		<label>basalt chunk</label>
		<graphicData>
			<color>(102,96,98)</color>
		</graphicData>
		<statBases>
			<Mass>25</Mass>
		</statBases>
		<soundDrop>ChunkRock_Drop</soundDrop>
		<butcherProducts>
			<MorrowRim_BlocksBasalt>20</MorrowRim_BlocksBasalt>
		</butcherProducts>
	</ThingDef>
	<!-- ==========[MorrowRim_BlocksBasalt]==========-->
	<ThingDef ParentName="StoneBlocksBase">
		<defName>MorrowRim_BlocksBasalt</defName>
		<label>basalt blocks</label>
		<description>Blocks of solid basalt. Basalt is a very hard stone.</description>
		<graphicData>
			<color>(102,96,98)</color>
		</graphicData>
		<statBases>
			<Mass>1.25</Mass>
			<SharpDamageMultiplier>0.65</SharpDamageMultiplier>
		</statBases>
		<stuffProps>
			<color>(102,96,98)</color>
			<soundImpactStuff>BulletImpact_Ground</soundImpactStuff>
			<soundMeleeHitSharp>MeleeHit_Stone</soundMeleeHitSharp>
			<soundMeleeHitBlunt>MeleeHit_Stone</soundMeleeHitBlunt>
			<stuffAdjective>basalt</stuffAdjective>
			<statFactors>
				<MaxHitPoints>1.7</MaxHitPoints>
			</statFactors>
			<canSuggestUseDefaultStuff>true</canSuggestUseDefaultStuff>
		</stuffProps>
	</ThingDef>
	<!-- ==========[MorrowRim_Make_StoneBlocksBasalt]==========-->
	<RecipeDef ParentName="MakeStoneBlocksBase">
		<defName>MorrowRim_Make_StoneBlocksBasalt</defName>
		<label>make basalt blocks</label>
		<description>Cuts basalt chunks into usable blocks.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MorrowRim_ChunkBasalt</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>MorrowRim_ChunkBasalt</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<MorrowRim_BlocksBasalt>20</MorrowRim_BlocksBasalt>
		</products>
	</RecipeDef>
</Defs>
