	<!-- ==========[MorrowRim_Basalt]==========-->
	<ThingDef ParentName="UglyRockBase" Name="MorrowRim_BasaltBase">
		<defName>MorrowRim_Basalt</defName>
		<label>columnar basalt</label>
		<description>Large columns of basalt, typically found in regions experiencing high volcanic activity.</description>
		<graphicData>
			<color>(102,96,98)</color>
			<texPath>Things/Building/RockTypes/MorrowRim_MorrowRim_ColumnarBasalt</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<linkType>None</linkType>
			<drawSize>(3,3)</drawSize>
		</graphicData>
		<statBases>
			<MaxHitPoints>900</MaxHitPoints>
		</statBases>
		<building>
			<mineableThing>MorrowRim_ChunkBasalt</mineableThing>
			<mineableDropChance>0.25</mineableDropChance>
			<!--<smoothedThing>MorrowRim_SmoothedBasalt</smoothedThing>-->
		</building>
	</ThingDef>
