<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[Mashed_Ashlands_BasaltScorched]==========-->
	<ThingDef ParentName="Mashed_Ashlands_BasaltBase" Name="Mashed_Ashlands_ScorchedBasaltBase">
		<defName>Mashed_Ashlands_BasaltScorched</defName>
		<label>scorched columnar basalt</label>
		<description>Large columns of basalt, typically found in regions experiencing high volcanic activity. These particular columns have been scorched by intense volcanic heat.</description>
		<graphicData>
			<color>(73,70,71)</color>
		</graphicData>
		<building>
			<mineableThing>Mashed_Ashlands_ChunkBasaltScorched</mineableThing>
			<smoothedThing>Mashed_Ashlands_SmoothedBasaltScorched</smoothedThing>
		</building>
	</ThingDef>
	<!-- ==========[Mashed_Ashlands_SmoothedBasaltScorched]==========-->
	<ThingDef ParentName="Mashed_Ashlands_ScorchedBasaltBase">
		<defName>Mashed_Ashlands_SmoothedBasaltScorched</defName>
		<label>smoothed basalt</label>
		<description>Formerly columns of scorched basalt, now smoothed into a perfectly flat surface.</description>
		<modExtensions Inherit="False"/>
		<graphicData>
			<texPath>Things/Building/Linked/RockSmooth_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>CornerFiller</linkType>
			<linkFlags>
				<li>Rock</li>
				<li>MapEdge</li>
			</linkFlags>
		</graphicData>
		<statBases>
			<Beauty>1</Beauty>
			<MarketValue>20</MarketValue>
		</statBases>
		<building>
			<isNaturalRock>false</isNaturalRock>
			<canBuildNonEdificesUnder>true</canBuildNonEdificesUnder>
			<artificialForMeditationPurposes>false</artificialForMeditationPurposes>
			<smoothedThing/>
			<paintable>true</paintable>
		</building>
		<saveCompressible>false</saveCompressible>
		<repairEffect>Repair</repairEffect>
	</ThingDef>
	<!-- ==========[Mashed_Ashlands_ChunkBasaltScorched]==========-->
	<ThingDef ParentName="Mashed_Ashlands_ChunkBasaltBase">
		<defName>Mashed_Ashlands_ChunkBasaltScorched</defName>
		<label>scorched basalt chunk</label>
		<graphicData>
			<color>(73,70,71)</color>
		</graphicData>
		<butcherProducts>
			<Mashed_Ashlands_BlocksBasaltScorched>20</Mashed_Ashlands_BlocksBasaltScorched>
		</butcherProducts>
	</ThingDef>
	<!-- ==========[Mashed_Ashlands_BlocksBasaltScorched]==========-->
	<ThingDef ParentName="Mashed_Ashlands_BlocksBasaltBase">
		<defName>Mashed_Ashlands_BlocksBasaltScorched</defName>
		<label>scorched basalt blocks</label>
		<description>Blocks of solid basalt. Basalt is a very hard stone.</description>
		<graphicData>
			<color>(73,70,71)</color>
		</graphicData>
		<stuffProps>
			<color>(73,70,71)</color>
		</stuffProps>
	</ThingDef>
	<!-- ==========[Mashed_Ashlands_Make_StoneBlocksBasaltScorched]==========-->
	<RecipeDef ParentName="MakeStoneBlocksBase">
		<defName>Mashed_Ashlands_Make_StoneBlocksBasaltScorched</defName>
		<label>make scorched basalt blocks</label>
		<description>Cuts scorched basalt chunks into usable blocks.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Mashed_Ashlands_ChunkBasaltScorched</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Mashed_Ashlands_ChunkBasaltScorched</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Mashed_Ashlands_BlocksBasaltScorched>20</Mashed_Ashlands_BlocksBasaltScorched>
		</products>
	</RecipeDef>
</Defs>
