<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[MorrowRim_Ashfall]==========-->
	<WeatherDef Name="MorrowRim_AshfallBase">
		<defName>MorrowRim_Ashfall</defName>
		<label>ash fall</label>
		<description>A light cloud of ash, either disturbed by wind or volcanic activity, is descending over the area. Ash will harmlessly fall from the sky.</description>
		<ambientSounds>
			<li>Ambient_Wind_Clear</li>
		</ambientSounds>
		<overlayClasses>
			<li>WeatherOverlay_SnowGentle</li>
		</overlayClasses>
		<!-- Colors are Overcast -->
		<skyColorsDay>
			<sky>(0.8,0.8,0.8)</sky>
			<shadow>(0.92,0.92,0.92)</shadow>
			<overlay>(1,1,1)</overlay>
			<saturation>0.8</saturation>
		</skyColorsDay>
		<skyColorsDusk>
			<sky>(1,1,1)</sky>
			<shadow>(0.92,0.92,0.92)</shadow>
			<overlay>(1,1,1)</overlay>
			<saturation>0.8</saturation>
		</skyColorsDusk>
		<skyColorsNightEdge>
			<sky>(0.35,0.40,0.45)</sky>
			<shadow>(0.92,0.92,0.92)</shadow>
			<overlay>(1,1,1)</overlay>
			<saturation>0.8</saturation>
		</skyColorsNightEdge>
		<skyColorsNightMid>
			<sky>(0.35,0.40,0.45)</sky>
			<shadow>(0.92,0.92,0.92)</shadow>
			<overlay>(1,1,1)</overlay>
			<saturation>0.8</saturation>
		</skyColorsNightMid>
	</WeatherDef>
	<!-- ==========[MorrowRim_FoggyAshfall]==========-->
	<WeatherDef ParentName="MorrowRim_AshfallBase">
		<defName>MorrowRim_FoggyAshfall</defName>
		<label>foggy ash fall</label>
		<windSpeedFactor>0.5</windSpeedFactor>
		<accuracyMultiplier>0.5</accuracyMultiplier>
		<ambientSounds Inherit="False">
			<li>Ambient_Wind_Fog</li>
		</ambientSounds>
		<overlayClasses>
			<li>WeatherOverlay_Fog</li>
		</overlayClasses>
	</WeatherDef>
</Defs>
