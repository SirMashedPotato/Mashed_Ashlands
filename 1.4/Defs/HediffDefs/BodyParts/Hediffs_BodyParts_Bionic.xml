<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[MorrowRim_ProstheticAshFilter]==========-->
	<HediffDef ParentName="ImplantHediffBase">
		<defName>MorrowRim_BionicAshFilter</defName>
		<label>bionic ash filter</label>
		<labelNoun>a bionic ash filter</labelNoun>
		<description>An installed bionic ash filter.</description>
		<descriptionHyperlinks>
			<ThingDef>MorrowRim_BionicAshFilter</ThingDef>
		</descriptionHyperlinks>
		<spawnThingOnRemoved>MorrowRim_BionicAshFilter</spawnThingOnRemoved>
		<stages>
			<li>
				<statOffsets>
					<MorrowRim_AshResistance>1</MorrowRim_AshResistance>
				</statOffsets>
			</li>
		</stages>
	</HediffDef>
	<!-- ==========[MorrowRim_ProstheticAshFilter]==========-->
	<ThingDef ParentName="BodyPartBionicBase">
		<defName>MorrowRim_BionicAshFilter</defName>
		<label>bionic ash filter</label>
		<description>A bionic implant typically installed into the sinuses. Contains an advanced filtration system that cleanses undesirable particles before they accumulate in the lungs. Particularly useful when travelling during ash storms.</description>
		<descriptionHyperlinks>
			<RecipeDef>MorrowRim_Install_BionicAshFilter</RecipeDef>
		</descriptionHyperlinks>
		<costList>
			<Plasteel>10</Plasteel>
			<ComponentSpacer>3</ComponentSpacer>
		</costList>
	</ThingDef>
	<!-- ==========[MorrowRim_ProstheticAshFilter]==========-->
	<RecipeDef ParentName="SurgeryInstallBodyPartArtificialBase">
		<defName>MorrowRim_Install_BionicAshFilter</defName>
		<label>install bionic ash filter</label>
		<description>Install a bionic ash filter.</description>
		<descriptionHyperlinks>
			<ThingDef>MorrowRim_BionicAshFilter</ThingDef>
			<HediffDef>MorrowRim_BionicAshFilter</HediffDef>
		</descriptionHyperlinks>
		<jobString>Installing bionic ash filter.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MorrowRim_BionicAshFilter</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>MorrowRim_BionicAshFilter</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Nose</li>
		</appliedOnFixedBodyParts>
		<addsHediff>MorrowRim_BionicAshFilter</addsHediff>
	</RecipeDef>
</Defs>