<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[MorrowRim_VolcanicDebris]==========-->
	<ThingDef ParentName="BuildingNaturalBase">
		<defName>MorrowRim_VolcanicDebris</defName>
		<thingClass>Mineable</thingClass>
		<label>volcanic debris</label>
		<description>A mass of rock originally found inside a volcano. May contain something useful.</description>
		<graphicData>
			<texPath>Things/Building/Natural/MorrowRim_VolcanicDebris</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<altitudeLayer>Item</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<rotatable>false</rotatable>
		<mineable>true</mineable>
		<pathCost>42</pathCost>
		<statBases>
			<MaxHitPoints>250</MaxHitPoints>
			<Flammability>0</Flammability>
		</statBases>
		<building>
			<isInert>true</isInert>
			<deconstructible>false</deconstructible>
			<destroyShakeAmount>0</destroyShakeAmount>
			<claimable>false</claimable>
		</building>
		<comps>
			<li Class="MorrowRim2.CompProperties_DropOnDestroy">
				<potentialDrops>
					<li>
						<thingDef>MorrowRim_ChunkBasalt</thingDef>
						<amountRange>1</amountRange>
						<weight>1</weight>
					</li>
					<li>
						<thingDef>MorrowRim_ChunkBasaltScorched</thingDef>
						<amountRange>1</amountRange>
						<weight>1</weight>
					</li>
					<li>
						<thingDef>Gold</thingDef>
						<amountRange>5~15</amountRange>
						<weight>0.5</weight>
					</li>
					<li MayRequire="sirmashedpotato.morrowrim.glassandebony">
						<thingDef>MorrowRim_Glass</thingDef>
						<amountRange>5~10</amountRange>
						<weight>0.3</weight>
					</li>
					<li MayRequire="sirmashedpotato.morrowrim.glassandebony">
						<thingDef>MorrowRim_Ebony</thingDef>
						<amountRange>5~10</amountRange>
						<weight>0.3</weight>
					</li>
					<li MayRequire="sirmashedpotato.morrowrim.telvannitechnology">
						<thingDef>MorrowRim_HeartStone</thingDef>
						<amountRange>1~3</amountRange>
						<weight>0.1</weight>
					</li>
				</potentialDrops>
			</li>
			<li Class="Flecker.CompProperties_Smoker" MayRequire="owlchemist.simplefx.smoke2">
				<fleckDef>Owl_SmokeHeavy</fleckDef>
				<indoorAlt>Owl_SmokeHeavyIndoors</indoorAlt>
			</li>
		</comps>
	</ThingDef>
</Defs>
