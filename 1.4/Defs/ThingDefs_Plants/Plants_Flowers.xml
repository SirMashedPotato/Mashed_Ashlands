<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[MorrowRim_Plant_Stoneflower]==========-->
	<ThingDef ParentName="PlantBase">
		<defName>MorrowRim_Plant_Stoneflower</defName>
		<label>stoneflower</label>
		<description>A blue flower that can often be found growing in stony ash. Though it looks fragile, it is surprisingly resistant to the effects of ash storms.</description>
		<modExtensions>
			<li Class="MorrowRim2.PlantProperties">
				<allowedTerrainForWild>
					<li>MorrowRim_AshGravel</li>
				</allowedTerrainForWild>
			</li>
		</modExtensions>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>4</Beauty>
			<BeautyOutdoors>4</BeautyOutdoors>
			<Nutrition>0.25</Nutrition>
			<MorrowRim_AshResistance>0.8</MorrowRim_AshResistance>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/MorrowRim_Stoneflower</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible/>
		<plant>
			<fertilitySensitivity>0.0</fertilitySensitivity>
			<growDays>2.5</growDays>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<sowResearchPrerequisites>
				<li>MorrowRim_AshSowing_Beginner</li>
			</sowResearchPrerequisites>
			<fertilityMin>0.05</fertilityMin>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>0.6~1.0</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>8</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
	</ThingDef>
</Defs>
