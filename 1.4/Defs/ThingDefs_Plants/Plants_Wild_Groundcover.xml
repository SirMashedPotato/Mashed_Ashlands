<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[MorrowRim_Plant_AshlandGrass]==========-->
	<ThingDef ParentName="MorrowRim_GrassBase">
		<defName>MorrowRim_Plant_AshlandGrass</defName>
		<label>ashland grass</label>
		<description>A species of wild grass adapted for life in the ashlands. Can grow anywhere there is a little light and ash rich ground.</description>
		<modExtensions>
			<li Class="MorrowRim2.PlantProperties">
				<terrainAffordancesToSow>
					<li>MorrowRim_GrowAsh</li>
				</terrainAffordancesToSow>
				<disallowedTerrainForWild>
					<li>MarshyTerrain</li>
					<li>MorrowRim_RichAshSoil</li>
				</disallowedTerrainForWild>
			</li>
		</modExtensions>
		<graphicData>
			<texPath>Things/Plant/MorrowRim_AshlandGrass</texPath>
		</graphicData>
		<plant>
			<sowResearchPrerequisites>
				<li>MorrowRim_AshSowing_Beginner</li>
			</sowResearchPrerequisites>
			<sowWork>170</sowWork>
		</plant>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_AshlandDuneGrass]==========-->
	<ThingDef ParentName="MorrowRim_GrassBase">
		<defName>MorrowRim_Plant_AshlandDuneGrass</defName>
		<label>ashland dune grass</label>
		<description>A species of wild grass adapted for life in the ashlands. Can grow anywhere there is a little light and ash rich sand.</description>
		<modExtensions>
			<li Class="MorrowRim2.PlantProperties">
				<allowedTerrainForWild>
					<li>MorrowRim_AshSand</li>
					<li>MorrowRim_AshSandVolcanic</li>
				</allowedTerrainForWild>
			</li>
		</modExtensions>
		<graphicData>
			<texPath>Things/Plant/MorrowRim_AshlandDuneGrass</texPath>
		</graphicData>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_AshlandFungus]==========-->
	<ThingDef ParentName="MorrowRim_PlantBase">
		<defName>MorrowRim_Plant_AshlandFungus</defName>
		<label>ashland fungus</label>
		<description>A species of wild mushroom adapted for life in the ashlands. Capable of growing in complete darkness, but needs ash rich ground to grow in.</description>
		<modExtensions>
			<li Class="MorrowRim2.PlantProperties">
				<terrainAffordancesToSow>
					<li>MorrowRim_GrowAsh</li>
				</terrainAffordancesToSow>
				<disallowedTerrainForWild>
					<li>MarshyTerrain</li>
				</disallowedTerrainForWild>
			</li>
		</modExtensions>
		<selectable>false</selectable>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.35</Nutrition>
			<Flammability>0.8</Flammability>
			<MorrowRim_AshResistance>1</MorrowRim_AshResistance>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/MorrowRim_AshlandFungus</texPath>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<plant>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>1</growOptimalGlow>
			<fertilityMin>0.6</fertilityMin>
			<growDays>2.5</growDays>
			<harvestWork>40</harvestWork>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>0.4~0.6</visualSizeRange>
			<topWindExposure>0.1</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>8</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<sowResearchPrerequisites>
				<li>MorrowRim_AshSowing_Beginner</li>
			</sowResearchPrerequisites>
			<sowWork>170</sowWork>
		</plant>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_Ashreed]==========-->
	<ThingDef Name="MorrowRim_Plant_AshreedBase" ParentName="MorrowRim_PlantBase">
		<defName>MorrowRim_Plant_Ashreed</defName>
		<label>ashreed</label>
		<description>A species of wild grass adapted for life in the ashlands. Often found growing near sources of water.</description>
		<modExtensions>
			<li Class="MorrowRim2.PlantProperties">
				<requireWaterForWild>true</requireWaterForWild>
				<minTilesToWaterForWild>3</minTilesToWaterForWild>
			</li>
		</modExtensions>
		<selectable>false</selectable>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.5</Nutrition>
			<Flammability>1.0</Flammability>
			<MorrowRim_AshResistance>0.9</MorrowRim_AshResistance>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/MorrowRim_Ashreed</texPath>
		</graphicData>
		<hideAtSnowDepth>0.6</hideAtSnowDepth>
		<plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0.3</fertilitySensitivity>
			<growDays>3</growDays>
			<harvestWork>40</harvestWork>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>0.8~1.2</visualSizeRange>
			<topWindExposure>0.4</topWindExposure>
			<wildClusterRadius>5</wildClusterRadius>
			<wildClusterWeight>80</wildClusterWeight>
			<wildOrder>1</wildOrder>
		</plant>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_DraggleTails]==========-->
	<ThingDef Name="MorrowRim_Plant_DraggleTailsBase" ParentName="MorrowRim_PlantBase">
		<defName>MorrowRim_Plant_DraggleTails</defName>
		<label>draggle-tails</label>
		<description>A primitive flowering plant, only found growing in humid ashland regions. They emit a faint glow, often used by explorers to aide in navigating the treacherous marshes at night.</description>
		<modExtensions>
			<li Class="MorrowRim2.PlantProperties">
				<allowedTerrainForWild>
					<li>MarshyTerrain</li>
				</allowedTerrainForWild>
			</li>
		</modExtensions>
		<selectable>false</selectable>
		<statBases>
			<Beauty>2</Beauty>
			<BeautyOutdoors>2</BeautyOutdoors>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.05</Nutrition>
			<Flammability>1.0</Flammability>
			<MorrowRim_AshResistance>0.9</MorrowRim_AshResistance>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/MorrowRim_DraggleTails</texPath>
		</graphicData>
		<hideAtSnowDepth>0.6</hideAtSnowDepth>
		<plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0.3</fertilitySensitivity>
			<growDays>7</growDays>
			<lifespanDaysPerGrowDays>2</lifespanDaysPerGrowDays>
			<harvestWork>40</harvestWork>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>0.8~1.4</visualSizeRange>
			<topWindExposure>0.1</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>8</wildClusterWeight>
			<wildOrder>1</wildOrder>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>1</glowRadius>
				<glowColor>(53,94,84,0)</glowColor>
			</li>
		</comps>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_LuminousRussula]==========-->
	<ThingDef ParentName="MorrowRim_PlantBase">
		<defName>MorrowRim_Plant_LuminousRussula</defName>
		<label>luminous russula</label>
		<description>A species of small mushroom, often found growing in caves in ashland regions, or in ashland regions with high levels of humidity. Its brilliant colouration and glow is quite beautiful. Capable of growing in complete darkness, but needs ash rich ground to grow in.</description>
		<modExtensions>
			<li Class="MorrowRim2.PlantProperties">
				<ashlandCavePlant>true</ashlandCavePlant>
				<cavePlantCommonality>0.2</cavePlantCommonality>
				<terrainAffordancesToSow>
					<li>MorrowRim_GrowAsh</li>
				</terrainAffordancesToSow>
			</li>
		</modExtensions>
		<selectable>false</selectable>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>4</Beauty>
			<BeautyOutdoors>4</BeautyOutdoors>
			<Nutrition>0.35</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/MorrowRim_LuminousRussula</texPath>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<plant>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>1</growOptimalGlow>
			<fertilityMin>0.6</fertilityMin>
			<growDays>4.6</growDays>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>0.15~0.35</visualSizeRange>
			<topWindExposure>0.05</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>8</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<sowResearchPrerequisites>
				<li>MorrowRim_AshSowing_Beginner</li>
			</sowResearchPrerequisites>
			<sowWork>200</sowWork>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>1</glowRadius>
				<glowColor>(3,47,69,0)</glowColor>
			</li>
		</comps>
	</ThingDef>
