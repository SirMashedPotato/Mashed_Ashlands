<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[MorrowRim_PlantBase]==========-->
	<ThingDef ParentName="PlantBase" Name="MorrowRim_PlantBase" Abstract="True">
		<graphicData>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<selectable>true</selectable>
		<neverMultiSelect>false</neverMultiSelect>
		<plant>
			<harvestTag>Standard</harvestTag>
			<sowTags>
				<li>Ground</li>
			</sowTags>
		</plant>
	</ThingDef>
	<!-- ==========[MorrowRim_BushBase]==========-->
	<ThingDef ParentName="MorrowRim_PlantBase" Name="MorrowRim_BushBase" Abstract="True">
		<altitudeLayer>Building</altitudeLayer>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<Nutrition>0.5</Nutrition>
		</statBases>
		<pathCost>30</pathCost>
		<fillPercent>0.2</fillPercent>
		<blockWind>false</blockWind>
		<ingestible>
			<foodType>Tree</foodType>
			<preferability>RawBad</preferability>
		</ingestible>
		<plant>
			<harvestWork>250</harvestWork>
			<soundHarvesting>Harvest_Tree</soundHarvesting>
			<soundHarvestFinish>Harvest_Tree_Finish</soundHarvestFinish>
			<harvestTag>Wood</harvestTag>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>10</wildClusterWeight>
			<wildOrder>2</wildOrder>
			<treeLoversCareIfChopped>false</treeLoversCareIfChopped>
		</plant>
	</ThingDef>
	<!-- ==========[MorrowRim_PseudoTreeBase]==========-->
	<ThingDef ParentName="MorrowRim_PlantBase" Name="MorrowRim_PseudoTreeBase" Abstract="True">
		<altitudeLayer>Building</altitudeLayer>
		<statBases>
			<MaxHitPoints>195</MaxHitPoints>
			<Nutrition>0.3</Nutrition>
		</statBases>
		<passability>PassThroughOnly</passability>
		<pathCost>130</pathCost>
		<fillPercent>0.4</fillPercent>
		<blockWind>false</blockWind>
		<ingestible>
			<foodType>Tree</foodType>
			<preferability>RawBad</preferability>
		</ingestible>
		<plant>
			<sowWork>4000</sowWork>
			<blockAdjacentSow>true</blockAdjacentSow>
			<wildClusterRadius>8</wildClusterRadius>
			<wildClusterWeight>24</wildClusterWeight>
			<wildOrder>3</wildOrder>
		</plant>
	</ThingDef>
	<!-- ==========[MorrowRim_FernBase]==========-->
	<ThingDef ParentName="PlantBase" Name="MorrowRim_FernBase" Abstract="True">
		<statBases>
			<MaxHitPoints>30</MaxHitPoints>
			<Nutrition>0.2</Nutrition>
			<MorrowRim_AshResistance>0.9</MorrowRim_AshResistance>
		</statBases>
		<pathCost>3</pathCost>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible/>
		<plant>
			<fertilityMin>0.2</fertilityMin>
			<fertilitySensitivity>0.6</fertilitySensitivity>
			<growDays>3.5</growDays>
			<harvestWork>60</harvestWork>
			<visualSizeRange>0.95~1.15</visualSizeRange>
			<topWindExposure>0.2</topWindExposure>
			<wildClusterRadius>3</wildClusterRadius>
			<wildClusterWeight>40</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<wildEqualLocalDistribution>false</wildEqualLocalDistribution>
		</plant>
	</ThingDef>
	<!-- ==========[MorrowRim_FlowerBase]==========-->
	<ThingDef ParentName="PlantBase" Name="MorrowRim_FlowerBase" Abstract="True">
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.25</Nutrition>
		</statBases>
		<graphicData>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible/>
		<plant>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>2.5</growDays>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<fertilityMin>0.05</fertilityMin>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>0.6~1.0</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>8</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
	</ThingDef>
	<!-- ==========[MorrowRim_GrassBase]==========-->
	<ThingDef ParentName="MorrowRim_PlantBase" Name="MorrowRim_GrassBase" Abstract="True">
		<selectable>false</selectable>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.45</Nutrition>
			<Flammability>1.0</Flammability>
			<MorrowRim_AshResistance>0.9</MorrowRim_AshResistance>
		</statBases>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<plant>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0.3</fertilitySensitivity>
			<growDays>2.5</growDays>
			<lifespanDaysPerGrowDays>3</lifespanDaysPerGrowDays>
