<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[MorrowRim_FlowerBase]==========-->
	<ThingDef ParentName="PlantBase" Name="MorrowRim_FlowerBase" Abstract="True">
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.25</Nutrition>
		</statBases>
		<graphicData>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible/>
		<plant>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>2.5</growDays>
			<sowTags>
				<li>Ground</li>
			</sowTags>
			<fertilityMin>0.05</fertilityMin>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>0.6~1.0</visualSizeRange>
			<topWindExposure>0.3</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>8</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<purpose>Beauty</purpose>
		</plant>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_BlackAntherflower]==========-->
	<ThingDef ParentName="MorrowRim_FlowerBase">
		<defName>MorrowRim_Plant_BlackAntherflower</defName>
		<label>black anther flower</label>
		<description>A unique looking flower that can often be found growing in coastal regions with ash rich ground.</description>
		<modExtensions>
			<li Class="MorrowRim2.PlantProperties">
				<allowedTerrainForWild>
					<li>MorrowRim_RichAshGravel</li>
					<li>MorrowRim_RichAshSoil</li>
				</allowedTerrainForWild>
			</li>
		</modExtensions>
		<statBases>
			<Beauty>10</Beauty>
			<BeautyOutdoors>10</BeautyOutdoors>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Flowers/MorrowRim_BlackAntherFlower</texPath>
		</graphicData>
		<plant>
			<sowResearchPrerequisites>
				<li>MorrowRim_AshSowing_Intermediate</li>
			</sowResearchPrerequisites>
		</plant>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_GoldenSedgeflower]==========-->
