<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[MorrowRim_Plant_Stoneflower]==========-->
	<ThingDef ParentName="MorrowRim_FlowerBase">
		<defName>MorrowRim_Plant_Stoneflower</defName>
		<label>stoneflower</label>
		<description>A blue flower that can often be found growing in stony ash. Though it looks fragile, it is surprisingly resistant to the effects of ash storms.</description>
		<modExtensions>
			<li Class="MorrowRim2.PlantProperties">
				<allowedTerrainForWild>
					<li>MorrowRim_AshGravel</li>
					<li>MorrowRim_GrazelandSoil</li>
				</allowedTerrainForWild>
			</li>
		</modExtensions>
		<statBases>
			<Beauty>4</Beauty>
			<BeautyOutdoors>4</BeautyOutdoors>
			<MorrowRim_AshResistance>0.8</MorrowRim_AshResistance>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/MorrowRim_Stoneflower</texPath>
		</graphicData>
		<plant>
			<sowResearchPrerequisites>
				<li>MorrowRim_AshSowing_Beginner</li>
			</sowResearchPrerequisites>
		</plant>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_WillowFlower]==========-->
	<ThingDef ParentName="MorrowRim_FlowerBase">
		<defName>MorrowRim_Plant_WillowFlower</defName>
		<label>willow flower</label>
		<description>A pink flower that can often be found growing in regions with ash rich ground.</description>
		<modExtensions>
			<li Class="MorrowRim2.PlantProperties">
				<allowedTerrainForWild>
					<li>MorrowRim_AshSoil</li>
				</allowedTerrainForWild>
			</li>
		</modExtensions>
		<statBases>
			<Beauty>6</Beauty>
			<BeautyOutdoors>6</BeautyOutdoors>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/MorrowRim_WillowFlower</texPath>
		</graphicData>
		<plant>
			<sowResearchPrerequisites>
				<li>MorrowRim_AshSowing_Beginner</li>
			</sowResearchPrerequisites>
		</plant>
	</ThingDef>
</Defs>
