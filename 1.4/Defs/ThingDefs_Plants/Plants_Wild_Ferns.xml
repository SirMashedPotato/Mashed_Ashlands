<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[MorrowRim_FernBase]==========-->
	<ThingDef ParentName="PlantBase" Name="MorrowRim_FernBase" Abstract="True">
		<statBases>
			<MaxHitPoints>30</MaxHitPoints>
			<Nutrition>0.2</Nutrition>
			<MorrowRim_AshResistance>0.9</MorrowRim_AshResistance>
		</statBases>
		<pathCost>3</pathCost>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible/>
		<plant>
			<fertilityMin>0.2</fertilityMin>
			<fertilitySensitivity>0.6</fertilitySensitivity>
			<growDays>3.5</growDays>
			<harvestWork>60</harvestWork>
			<visualSizeRange>0.95~1.15</visualSizeRange>
			<topWindExposure>0.2</topWindExposure>
			<wildClusterRadius>3</wildClusterRadius>
			<wildClusterWeight>40</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<wildEqualLocalDistribution>false</wildEqualLocalDistribution>
		</plant>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_AshenFern]==========-->
	<ThingDef ParentName="MorrowRim_FernBase">
		<defName>MorrowRim_Plant_AshenFern</defName>
		<label>ashen fern</label>
		<description>A rare fern that can sometimes be found growing in humid ashland regions. Certain local tribes use the flowers of this fern to mask their scent whilst hunting.</description>
		<modExtensions>
			<li Class="MorrowRim2.PlantProperties">
				<disallowedTerrainForWild>
					<li>MarshyTerrain</li>
				</disallowedTerrainForWild>
			</li>
		</modExtensions>
		<statBases>
			<Beauty>5</Beauty>
			<BeautyOutdoors>5</BeautyOutdoors>
			<Flammability>0.6</Flammability>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Ferns/MorrowRim_AshenFernPlant</texPath>
		</graphicData>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_AshlandFern]==========-->
	<ThingDef ParentName="MorrowRim_FernBase">
		<defName>MorrowRim_Plant_AshlandFern</defName>
		<label>ashland fern</label>
		<description>A small fern that can often be found growing regions with ash rich ground. While rather resistant to ash storms, it is not immune to the effects of them.</description>
		<statBases>
			<Beauty>3</Beauty>
			<BeautyOutdoors>3</BeautyOutdoors>
			<Flammability>0.4</Flammability>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Ferns/MorrowRim_AshlandFernPlant</texPath>
		</graphicData>
		<ingestible/>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_SloughFern]==========-->
	<ThingDef ParentName="MorrowRim_FernBase">
		<defName>MorrowRim_Plant_SloughFern</defName>
		<label>slough fern</label>
		<description>A large fern that can often be found growing in pools of stagnant water in humid ashland regions.</description>
		<modExtensions>
			<li Class="MorrowRim2.PlantProperties">
				<allowedTerrainForWild>
					<li>MarshyTerrain</li>
				</allowedTerrainForWild>
			</li>
		</modExtensions>
		<statBases>
			<Beauty>3</Beauty>
			<BeautyOutdoors>3</BeautyOutdoors>
			<Flammability>0.8</Flammability>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Ferns/MorrowRim_SloughFernPlant</texPath>
		</graphicData>
		<ingestible/>
		<plant>
			<visualSizeRange>0.9~1.6</visualSizeRange>
		</plant>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_SomnaliusFern]==========-->
	<ThingDef ParentName="MorrowRim_FernBase">
		<defName>MorrowRim_Plant_SomnaliusFern</defName>
		<label>ashland somnalius fern</label>
		<description>A small fern that can often be found growing in humid ashland regions.</description>
		<statBases>
			<Beauty>3</Beauty>
			<BeautyOutdoors>3</BeautyOutdoors>
			<Flammability>0.8</Flammability>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Ferns/MorrowRim_SomnaliusFernPlant</texPath>
		</graphicData>
		<ingestible/>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_FireFern]==========-->
	<ThingDef ParentName="MorrowRim_FernBase">
		<defName>MorrowRim_Plant_FireFern</defName>
		<label>fire fern</label>
		<description>A small fern that can often be found growing regions experiencing extreme volcanic activity. It's ability to withstand extreme heat has allowed it to grow where no other ferns dare.</description>
		<statBases>
			<Beauty>3</Beauty>
			<BeautyOutdoors>3</BeautyOutdoors>
			<Flammability>0.1</Flammability>
			<MorrowRim_AshResistance>1</MorrowRim_AshResistance>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Ferns/MorrowRim_FireFernPlant</texPath>
		</graphicData>
		<ingestible/>
	</ThingDef>
</Defs>
