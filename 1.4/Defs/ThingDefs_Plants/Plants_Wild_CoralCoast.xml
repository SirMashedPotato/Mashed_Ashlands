<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[MorrowRim_Plant_LandCoral]==========-->
	<ThingDef Name="MorrowRim_Plant_LandCoralBase" ParentName="MorrowRim_PlantBase">
		<defName>MorrowRim_Plant_LandCoral</defName>
		<label>land coral</label>
		<description>A small land coral that can often be found growing coastal regions with ash rich ground.</description>
		<modExtensions>
			<li Class="MorrowRim2.PlantProperties">
				<allowedTerrainForWild>
					<li>MorrowRim_AshSand</li>
				</allowedTerrainForWild>
				<terrainAffordancesToSow>
					<li>MorrowRim_GrowAsh</li>
				</terrainAffordancesToSow>
			</li>
		</modExtensions>
		<statBases>
			<MaxHitPoints>30</MaxHitPoints>
			<Beauty>5</Beauty>
			<BeautyOutdoors>5</BeautyOutdoors>
			<Nutrition>0.2</Nutrition>
			<Flammability>0.4</Flammability>
			<MorrowRim_AshResistance>1</MorrowRim_AshResistance>
		</statBases>
		<pathCost>3</pathCost>
		<graphicData>
			<texPath>Things/Plant/MorrowRim_LandCoralPlant</texPath>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<ingestible/>
		<plant>
			<fertilityMin>0.4</fertilityMin>
			<fertilitySensitivity>0.6</fertilitySensitivity>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>1</growOptimalGlow>
			<growDays>3.5</growDays>
			<harvestWork>60</harvestWork>
			<visualSizeRange>0.95~1.15</visualSizeRange>
			<topWindExposure>0.2</topWindExposure>
			<wildClusterRadius>3</wildClusterRadius>
			<wildClusterWeight>40</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<wildEqualLocalDistribution>false</wildEqualLocalDistribution>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>1</glowRadius>
				<glowColor>(255,152,67,0)</glowColor>
			</li>
		</comps>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_LandCoralBush]==========-->
	<ThingDef Name="MorrowRim_Plant_LandCoralBushBase" ParentName="MorrowRim_BushBase">
		<defName>MorrowRim_Plant_LandCoralBush</defName>
		<label>land coral bush</label>
		<description>A medium land coral that can often be found growing coastal regions with ash rich ground.</description>
		<modExtensions>
			<li Class="MorrowRim2.PlantProperties">
				<allowedTerrainForWild>
					<li>MorrowRim_AshSand</li>
				</allowedTerrainForWild>
				<terrainAffordancesToSow>
					<li>MorrowRim_GrowAsh</li>
				</terrainAffordancesToSow>
			</li>
		</modExtensions>
		<statBases>
			<Beauty>7</Beauty>
			<BeautyOutdoors>7</BeautyOutdoors>
			<Flammability>0.5</Flammability>
			<MorrowRim_AshResistance>1</MorrowRim_AshResistance>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/MorrowRim_LandCoralBush</texPath>
			<shadowData>
				<volume>(0.2, 0.2, 0.2)</volume>
				<offset>(0,0,-0.0)</offset>
			</shadowData>
		</graphicData>
		<uiIconScale>0.85</uiIconScale>
		<plant>
			<fertilityMin>0.4</fertilityMin>
			<fertilitySensitivity>0.6</fertilitySensitivity>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>1</growOptimalGlow>
			<growDays>6</growDays>
			<harvestedThingDef>MorrowRim_ParasolWoodLog</harvestedThingDef>
			<harvestYield>2</harvestYield>
			<sowResearchPrerequisites>
				<li>MorrowRim_AshSowing_Intermediate</li>
			</sowResearchPrerequisites>
			<visualSizeRange>0.95~2.0</visualSizeRange>
			<topWindExposure>0.2</topWindExposure>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(255,152,67,0)</glowColor>
			</li>
		</comps>
	</ThingDef>
</Defs>
