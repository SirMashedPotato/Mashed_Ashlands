<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<BiomeDef ParentName="MorrowRim_AshlandsBase">
		<defName>MorrowRim_CragIslandAshlands</defName>
		<label>ashland crag islands</label>
		<description>A collection of small, and often rocky, islands. Much of the ground here is gravel, though there are pockets of rich ash. While many plants struggle to grow here, ample access to coast allows for large clusters of marshmerrow and saltrice. Many of the animals native to the ashlands are not found here. The islands are instead dominated by netch, mudcrabs... and cliff racers.</description>
		<workerClass>MorrowRim2.BiomeWorker_CragIslandAshlands</workerClass>
		<texture>World/Biomes/MorrowRim_CragIslandAshlands</texture>
		<modExtensions>
			<li Class="MorrowRim2.BiomeProperties">
				<lateLoader>true</lateLoader>
				<disableBeaches>true</disableBeaches>
				<forceHilliness>true</forceHilliness>
				<restrictPlantsToTerrain>true</restrictPlantsToTerrain>
				<increasePollutedFertility>true</increasePollutedFertility>
				<forcedRockType>MorrowRim_Basalt</forcedRockType>
				<terrainReplacers>
					<li>
						<originalTerrain>Gravel</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravel</replacedTerrain>
					</li>
					<li>
						<originalTerrain>Sand</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravel</replacedTerrain>
					</li>
				</terrainReplacers>
				<roadReplacers>
					<li>
						<originalTerrain>PackedDirt</originalTerrain>
						<replacedTerrain>MorrowRim_PackedAsh</replacedTerrain>
					</li>
				</roadReplacers>
				<dryToReplacers>
					<li>
						<originalTerrain>WaterShallow</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravel</replacedTerrain>
					</li>
					<li>
						<originalTerrain>WaterOceanShallow</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravel</replacedTerrain>
					</li>
				</dryToReplacers>
				<useAshlandCavePlants>true</useAshlandCavePlants>
				<useCustomCaveTerrain>true</useCustomCaveTerrain>
				<otherTerrainDef>MorrowRim_RichAshGravel</otherTerrainDef>
				<waterTerrainDef>WaterShallow</waterTerrainDef>
				<otherTerrainThreshold>0.25</otherTerrainThreshold>
				<waterThreshold>0.4</waterThreshold>
			</li>
		</modExtensions>
		<animalDensity>1.7</animalDensity>
		<plantDensity>0.3</plantDensity>
		<foragedFood>MorrowRim_RawMarshmerrow</foragedFood>
		<movementDifficulty>2</movementDifficulty>
		<soundsAmbient>
			<!-- seabirds? -->
		</soundsAmbient>
		<terrainsByFertility>
			<li>
				<terrain>WaterDeep</terrain>
				<min>-999</min>
				<max>0.47</max>
			</li>
			<li>
				<terrain>WaterShallow</terrain>
				<min>-0.47</min>
				<max>0.77</max>
			</li>
			<li>
				<terrain>MorrowRim_AshGravel</terrain>
				<min>0.77</min>
				<max>0.87</max>
			</li>
			<li>
				<terrain>MorrowRim_AshSoil</terrain>
				<min>0.87</min>
				<max>999</max>
			</li>
		</terrainsByFertility>
		<terrainPatchMakers>
			<li>
				<perlinFrequency>0.015</perlinFrequency>
				<thresholds>
					<li>
						<terrain>WaterShallow</terrain>
						<min>0.5</min>
						<max>0.66</max>
					</li>
					<li>
						<terrain>MorrowRim_RichAshGravel</terrain>
						<min>0.66</min>
						<max>0.88</max>
					</li>
					<li>
						<terrain>MorrowRim_RichAshSoil</terrain>
						<min>0.88</min>
						<max>99</max>
					</li>
				</thresholds>
			</li>
			<li>
				<perlinFrequency>0.035</perlinFrequency>
				<thresholds>
					<li>
						<terrain>WaterShallow</terrain>
						<min>0.5</min>
						<max>0.68</max>
					</li>
					<li>
						<terrain>MorrowRim_AshGravel</terrain>
						<min>0.68</min>
						<max>0.86</max>
					</li>
					<li>
						<terrain>MorrowRim_RichAshGravel</terrain>
						<min>0.86</min>
						<max>99</max>
					</li>
					
				</thresholds>
			</li>
		</terrainPatchMakers>
		<baseWeatherCommonalities>
			<!-- Vanilla Weather -->
			<Clear>18</Clear>
			<Fog>5</Fog>
			<Rain>3</Rain>
			<DryThunderstorm>1</DryThunderstorm>
			<RainyThunderstorm>1</RainyThunderstorm>
			<FoggyRain>2</FoggyRain>
			<SnowGentle>4</SnowGentle>
			<SnowHard>4</SnowHard>
			<!-- MorrowRim weather -->
			<MorrowRim_Ashfall>4</MorrowRim_Ashfall>
			<MorrowRim_FoggyAshfall>2</MorrowRim_FoggyAshfall>
			<!-- Regrowth weather -->
			<RG_Drizzle MayRequire="ReGrowth.BOTR.Core">3</RG_Drizzle>
			<RG_FoggySnow MayRequire="ReGrowth.BOTR.Core">2</RG_FoggySnow>
			<RG_Overcast MayRequire="ReGrowth.BOTR.Core">6</RG_Overcast>
			<RG_Windy MayRequire="ReGrowth.BOTR.Core">8</RG_Windy>
			<RG_Blizzard MayRequire="ReGrowth.BOTR.Core">0.5</RG_Blizzard>
			<RG_Monsoon MayRequire="ReGrowth.BOTR.Core">0.5</RG_Monsoon>
		</baseWeatherCommonalities>
		<wildPlants>
			<!-- Ground covers -->
			<Plant_Grass>6</Plant_Grass>
			<MorrowRim_Plant_AshlandGrass>8</MorrowRim_Plant_AshlandGrass>
			<MorrowRim_Plant_AshlandFungus>1</MorrowRim_Plant_AshlandFungus>
			<MorrowRim_Plant_Ashreed>10</MorrowRim_Plant_Ashreed>
			<!-- Nutrition plants -->
			<MorrowRim_Plant_Marshmerrow>5</MorrowRim_Plant_Marshmerrow>
			<MorrowRim_Plant_Saltrice>4</MorrowRim_Plant_Saltrice>
			<!-- Resource plants -->
			<MorrowRim_Plant_MuckSponge>2</MorrowRim_Plant_MuckSponge>
			<MorrowRim_Plant_Kreshweed>2</MorrowRim_Plant_Kreshweed>
			<MorrowRim_Plant_ParasolBush>0.2</MorrowRim_Plant_ParasolBush>
			<MorrowRim_Plant_TramaShrub>0.1</MorrowRim_Plant_TramaShrub>
			<!-- Aesthetic plants -->
			<MorrowRim_Plant_WillowFlower>0.05</MorrowRim_Plant_WillowFlower>
			<MorrowRim_Plant_Stoneflower>0.05</MorrowRim_Plant_Stoneflower>
			<MorrowRim_Plant_AshlandFern>0.1</MorrowRim_Plant_AshlandFern>
			<!-- Trees -->
			<MorrowRim_Plant_TreeEmperorParasol>0.2</MorrowRim_Plant_TreeEmperorParasol>
			<!-- ==========[Pollution]========== -->
			<!-- Polluted ground covers -->
			<Plant_GrayGrass MayRequire="Ludeon.RimWorld.Biotech">8</Plant_GrayGrass>
			<MorrowRim_Plant_GlowingAshreed MayRequire="Ludeon.RimWorld.Biotech">10</MorrowRim_Plant_GlowingAshreed>
			<!-- Polluted nutrition plants -->
			<MorrowRim_Plant_GlowingScathecraw MayRequire="Ludeon.RimWorld.Biotech">0.2</MorrowRim_Plant_GlowingScathecraw>
			<MorrowRim_Plant_GlowingParasolBush MayRequire="Ludeon.RimWorld.Biotech">0.4</MorrowRim_Plant_GlowingParasolBush>
			<!-- Polluted resource plants -->
			<MorrowRim_Plant_TramaMass MayRequire="Ludeon.RimWorld.Biotech">0.1</MorrowRim_Plant_TramaMass>
			<MorrowRim_Plant_WasteSponge MayRequire="Ludeon.RimWorld.Biotech">0.4</MorrowRim_Plant_WasteSponge>
			<!-- Polluted trees -->
			<MorrowRim_Plant_TreeEmperorToxisol MayRequire="Ludeon.RimWorld.Biotech">0.2</MorrowRim_Plant_TreeEmperorToxisol>
		</wildPlants>
		<wildAnimals>
			<!-- prey animals -->
			<Rat>0.2</Rat>
			<MorrowRim_Scuttler>0.1</MorrowRim_Scuttler>
			<!-- herd animals -->
			<MorrowRim_Netch>0.5</MorrowRim_Netch>
			<MorrowRim_Mudcrab>0.3</MorrowRim_Mudcrab>
			<!-- predators -->
			<MorrowRim_CliffRacer>0.5</MorrowRim_CliffRacer>
			<!-- special -->
		</wildAnimals>
		<pollutionWildAnimals MayRequire="Ludeon.RimWorld.Biotech">
			<Rat>0.6</Rat>
			<WasteRat MayRequire="Ludeon.RimWorld.Biotech">0.2</WasteRat>
			<MorrowRim_NetchGlowing MayRequire="Ludeon.RimWorld.Biotech">1</MorrowRim_NetchGlowing>
			<MorrowRim_CliffRacer>1</MorrowRim_CliffRacer>
		</pollutionWildAnimals>
	</BiomeDef>
</Defs>