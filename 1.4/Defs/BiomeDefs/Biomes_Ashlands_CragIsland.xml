<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<BiomeDef ParentName="Mashed_Ashlands_AshlandsBase">
		<defName>Mashed_Ashlands_CragIslandAshlands</defName>
		<label>ashland crag islands</label>
		<description>A collection of small, and often rocky, islands. Much of the ground here is gravel, though there are pockets of rich ash. While many plants struggle to grow here, ample access to coast allows for large clusters of marshmerrow and saltrice. Many of the animals native to the ashlands are not found here. The islands are instead dominated by netch, mudcrabs... and cliff racers.</description>
		<workerClass>Mashed_Ashlands.BiomeWorker_CragIslandAshlands</workerClass>
		<texture>World/Biomes/Mashed_Ashlands_CragIslandAshlands</texture>
		<modExtensions>
			<li Class="Mashed_Ashlands.BiomeProperties">
				<earlyLoader>true</earlyLoader>
				<disableBeaches>true</disableBeaches>
				<forceHilliness>true</forceHilliness>
				<restrictPlantsToTerrain>true</restrictPlantsToTerrain>
				<increasePollutedFertility>true</increasePollutedFertility>
				<forcedRockType>Mashed_Ashlands_Basalt</forcedRockType>
				<terrainReplacers>
					<li>
						<originalTerrain>Gravel</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_AshGravel</replacedTerrain>
					</li>
					<li>
						<originalTerrain>Sand</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_AshGravel</replacedTerrain>
					</li>
				</terrainReplacers>
				<roadReplacers>
					<li>
						<originalTerrain>PackedDirt</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_PackedAsh</replacedTerrain>
					</li>
				</roadReplacers>
				<dryToReplacers>
					<li>
						<originalTerrain>WaterShallow</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_AshGravel</replacedTerrain>
					</li>
					<li>
						<originalTerrain>WaterOceanShallow</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_AshGravel</replacedTerrain>
					</li>
				</dryToReplacers>
				<useAshlandCavePlants>true</useAshlandCavePlants>
				<useCustomCaveTerrain>true</useCustomCaveTerrain>
				<otherTerrainDef>Mashed_Ashlands_RichAshGravel</otherTerrainDef>
				<waterTerrainDef>WaterShallow</waterTerrainDef>
				<otherTerrainThreshold>0.25</otherTerrainThreshold>
				<waterThreshold>0.4</waterThreshold>
			</li>
			<li Class="GeologicalLandforms.BiomeProperties" MayRequire="m00nl1ght.GeologicalLandforms">
				<allowLandforms>false</allowLandforms>
				<allowBiomeTransitions>false</allowBiomeTransitions>
			</li>
		</modExtensions>
		<animalDensity>1.7</animalDensity>
		<plantDensity>0.3</plantDensity>
		<foragedFood>Mashed_Ashlands_RawMarshmerrow</foragedFood>
		<movementDifficulty>2</movementDifficulty>
		<soundsAmbient>
			<!-- seabirds? -->
		</soundsAmbient>
		<terrainsByFertility>
			<li>
				<terrain>WaterOceanDeep</terrain>
				<min>-999</min>
				<max>0.47</max>
			</li>
			<li>
				<terrain>WaterOceanShallow</terrain>
				<min>-0.47</min>
				<max>0.77</max>
			</li>
			<li>
				<terrain>Mashed_Ashlands_AshGravel</terrain>
				<min>0.77</min>
				<max>0.87</max>
			</li>
			<li>
				<terrain>Mashed_Ashlands_AshSoil</terrain>
				<min>0.87</min>
				<max>999</max>
			</li>
		</terrainsByFertility>
		<terrainPatchMakers>
			<li>
				<perlinFrequency>0.015</perlinFrequency>
				<thresholds>
					<li>
						<terrain>WaterOceanShallow</terrain>
						<min>0.5</min>
						<max>0.66</max>
					</li>
					<li>
						<terrain>Mashed_Ashlands_RichAshGravel</terrain>
						<min>0.66</min>
						<max>0.88</max>
					</li>
					<li>
						<terrain>Mashed_Ashlands_RichAshSoil</terrain>
						<min>0.88</min>
						<max>99</max>
					</li>
				</thresholds>
			</li>
			<li>
				<perlinFrequency>0.035</perlinFrequency>
				<thresholds>
					<li>
						<terrain>WaterOceanShallow</terrain>
						<min>0.5</min>
						<max>0.68</max>
					</li>
					<li>
						<terrain>Mashed_Ashlands_AshGravel</terrain>
						<min>0.68</min>
						<max>0.86</max>
					</li>
					<li>
						<terrain>Mashed_Ashlands_RichAshGravel</terrain>
						<min>0.86</min>
						<max>99</max>
					</li>
				</thresholds>
			</li>
		</terrainPatchMakers>
		<baseWeatherCommonalities>
			<!-- Vanilla Weather -->
			<Clear>18</Clear>
			<Fog>5</Fog>
			<Rain>3</Rain>
			<DryThunderstorm>1</DryThunderstorm>
			<RainyThunderstorm>1</RainyThunderstorm>
			<FoggyRain>2</FoggyRain>
			<SnowGentle>4</SnowGentle>
			<SnowHard>4</SnowHard>
			<!-- MorrowRim weather -->
			<Mashed_Ashlands_Ashfall>4</Mashed_Ashlands_Ashfall>
			<Mashed_Ashlands_FoggyAshfall>2</Mashed_Ashlands_FoggyAshfall>
			<!-- Regrowth weather -->
			<RG_Drizzle MayRequire="ReGrowth.BOTR.Core">3</RG_Drizzle>
			<RG_FoggySnow MayRequire="ReGrowth.BOTR.Core">2</RG_FoggySnow>
			<RG_Overcast MayRequire="ReGrowth.BOTR.Core">6</RG_Overcast>
			<RG_Windy MayRequire="ReGrowth.BOTR.Core">8</RG_Windy>
			<RG_Blizzard MayRequire="ReGrowth.BOTR.Core">0.5</RG_Blizzard>
			<RG_Monsoon MayRequire="ReGrowth.BOTR.Core">0.5</RG_Monsoon>
		</baseWeatherCommonalities>
		<wildPlants>
			<!-- Ground covers -->
			<Plant_Grass>6</Plant_Grass>
			<Mashed_Ashlands_Plant_AshlandGrass>8</Mashed_Ashlands_Plant_AshlandGrass>
			<Mashed_Ashlands_Plant_AshlandFungus>1</Mashed_Ashlands_Plant_AshlandFungus>
			<Mashed_Ashlands_Plant_Ashreed>10</Mashed_Ashlands_Plant_Ashreed>
			<!-- Nutrition plants -->
			<Mashed_Ashlands_Plant_Marshmerrow>5</Mashed_Ashlands_Plant_Marshmerrow>
			<Mashed_Ashlands_Plant_Saltrice>4</Mashed_Ashlands_Plant_Saltrice>
			<!-- Resource plants -->
			<Mashed_Ashlands_Plant_MuckSponge>2</Mashed_Ashlands_Plant_MuckSponge>
			<Mashed_Ashlands_Plant_Kreshweed>2</Mashed_Ashlands_Plant_Kreshweed>
			<Mashed_Ashlands_Plant_ParasolBush>0.2</Mashed_Ashlands_Plant_ParasolBush>
			<Mashed_Ashlands_Plant_TramaShrub>0.1</Mashed_Ashlands_Plant_TramaShrub>
			<!-- Aesthetic plants -->
			<Mashed_Ashlands_Plant_BlackAntherflower>0.1</Mashed_Ashlands_Plant_BlackAntherflower>
			<Mashed_Ashlands_Plant_WillowFlower>0.05</Mashed_Ashlands_Plant_WillowFlower>
			<Mashed_Ashlands_Plant_Stoneflower>0.05</Mashed_Ashlands_Plant_Stoneflower>
			<Mashed_Ashlands_Plant_AshlandFern>0.1</Mashed_Ashlands_Plant_AshlandFern>
			<!-- Trees -->
			<Mashed_Ashlands_Plant_TreeEmperorParasol>0.2</Mashed_Ashlands_Plant_TreeEmperorParasol>
			<RB_Plant_Hive_Arctic MayRequire="sarg.rimbees">0.01</RB_Plant_Hive_Arctic>
			<RB_Plant_Hive_Icy MayRequire="sarg.rimbees">0.01</RB_Plant_Hive_Icy>
			<!-- ==========[Pollution]========== -->
			<!-- Polluted ground covers -->
			<Plant_GrayGrass MayRequire="Ludeon.RimWorld.Biotech">8</Plant_GrayGrass>
			<Mashed_Ashlands_Plant_GlowingAshreed MayRequire="Ludeon.RimWorld.Biotech">10</Mashed_Ashlands_Plant_GlowingAshreed>
			<!-- Polluted nutrition plants -->
			<Mashed_Ashlands_Plant_GlowingScathecraw MayRequire="Ludeon.RimWorld.Biotech">0.2</Mashed_Ashlands_Plant_GlowingScathecraw>
			<Mashed_Ashlands_Plant_GlowingParasolBush MayRequire="Ludeon.RimWorld.Biotech">0.4</Mashed_Ashlands_Plant_GlowingParasolBush>
			<!-- Polluted resource plants -->
			<Mashed_Ashlands_Plant_TramaMass MayRequire="Ludeon.RimWorld.Biotech">0.1</Mashed_Ashlands_Plant_TramaMass>
			<Mashed_Ashlands_Plant_WasteSponge MayRequire="Ludeon.RimWorld.Biotech">0.4</Mashed_Ashlands_Plant_WasteSponge>
			<!-- Polluted trees -->
			<Mashed_Ashlands_Plant_TreeEmperorToxisol MayRequire="Ludeon.RimWorld.Biotech">0.2</Mashed_Ashlands_Plant_TreeEmperorToxisol>
		</wildPlants>
		<wildAnimals>
			<!-- prey animals -->
			<Rat>0.2</Rat>
			<Mashed_Ashlands_Scuttler>0.1</Mashed_Ashlands_Scuttler>
			<Mashed_Ashlands_SandcrabBlue>0.4</Mashed_Ashlands_SandcrabBlue>
			<!-- herd animals -->
			<Mashed_Ashlands_Netch>0.5</Mashed_Ashlands_Netch>
			<Mashed_Ashlands_Mudcrab>0.3</Mashed_Ashlands_Mudcrab>
			<!-- predators -->
			<Mashed_Ashlands_CliffRacer>0.5</Mashed_Ashlands_CliffRacer>
			<!-- special -->
		</wildAnimals>
		<pollutionWildAnimals>
			<Rat>0.6</Rat>
			<WasteRat MayRequire="Ludeon.RimWorld.Biotech">0.2</WasteRat>
			<Mashed_Ashlands_NetchGlowing MayRequire="Ludeon.RimWorld.Biotech">1</Mashed_Ashlands_NetchGlowing>
			<Mashed_Ashlands_CliffRacer>1</Mashed_Ashlands_CliffRacer>
		</pollutionWildAnimals>
	</BiomeDef>
</Defs>