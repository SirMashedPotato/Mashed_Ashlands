<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<BiomeDef ParentName="MorrowRim_BlightedAshlandsBase">
		<defName>MorrowRim_BlightedBogAshlands</defName>
		<label>blighted bog</label>
		<description>Blighted ashlands but muddy. Possibly the old blighted mud, as well as blighted sludge (watery). Something something more plant life thanks to groundwater, but less farmable terrain.</description>
		<workerClass>MorrowRim2.BiomeWorker_BlightedBogAshlands</workerClass>
		<texture>World/Biomes/MorrowRim_BlightedBogAshlands</texture>
		<modExtensions Inherit="False">
			<li Class="MorrowRim2.BiomeProperties">
				<lateLoader>true</lateLoader>
				<restrictPlantsToTerrain>true</restrictPlantsToTerrain>
				<increasePollutedFertility>false</increasePollutedFertility>
				<forcedRockType>MorrowRim_Basalt</forcedRockType>
				<terrainReplacers>
					<li>
						<originalTerrain>Gravel</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravelBlighted</replacedTerrain>
					</li>
					<li>
						<originalTerrain>Sand</originalTerrain>
						<replacedTerrain>MorrowRim_AshSandBlighted</replacedTerrain>
					</li>
					<li>
						<originalTerrain>WaterMovingShallow</originalTerrain>
						<replacedTerrain>MorrowRim_CrackedAshSoilBlighted</replacedTerrain>
					</li>
					<li>
						<originalTerrain>WaterMovingChestDeep</originalTerrain>
						<replacedTerrain>MorrowRim_CrackedAshSoilBlighted</replacedTerrain>
					</li>
				</terrainReplacers>
				<roadReplacers>
					<li>
						<originalTerrain>PackedDirt</originalTerrain>
						<replacedTerrain>MorrowRim_PackedAshBlighted</replacedTerrain>
					</li>
				</roadReplacers>
				<dryToReplacers>
					<li>
						<originalTerrain>WaterShallow</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravelBlighted</replacedTerrain>
					</li>
					<li>
						<originalTerrain>WaterOceanShallow</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravelBlighted</replacedTerrain>
					</li>
				</dryToReplacers>
				<useAshlandCavePlants>true</useAshlandCavePlants>
				<useCustomCaveTerrain>true</useCustomCaveTerrain>
				<otherTerrainDef>MorrowRim_AshGravel</otherTerrainDef>
				<waterTerrainDef>WaterShallow</waterTerrainDef>
				<otherTerrainThreshold>0.25</otherTerrainThreshold>
				<waterThreshold>0.9</waterThreshold>
			</li>
		</modExtensions>
		<plantDensity>0.05</plantDensity>
		<terrainPatchMakers Inherit="False">
			<li>
				<perlinFrequency>0.04</perlinFrequency>
				<thresholds>
					<li>
						<terrain>MorrowRim_CrackedAshSoilBlighted</terrain>
						<min>0.35</min>
						<max>0.85</max>
					</li>
					<li>
						<terrain>MorrowRim_AshMudBlighted</terrain>
						<min>0.85</min>
						<max>99</max>
					</li>
				</thresholds>
			</li>
			<li>
				<perlinFrequency>0.027</perlinFrequency>
				<thresholds>
					<li>
						<terrain>MorrowRim_CrackedAshSoilBlighted</terrain>
						<min>0.2</min>
						<max>0.4</max>
					</li>
					<li>
						<terrain>MorrowRim_AshMudBlighted</terrain>
						<min>0.4</min>
						<max>0.7</max>
					</li>
					<li>
						<terrain>MorrowRim_BlightedSludge</terrain>
						<min>0.7</min>
						<max>99</max>
					</li>
				</thresholds>
			</li>
		</terrainPatchMakers>
	</BiomeDef>
</Defs>