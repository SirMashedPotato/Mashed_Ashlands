                <baseBiome>true</baseBiome>
				<forcedRockType>MorrowRim_Basalt</forcedRockType>
				<terrainReplacers>
					<li>
						<originalTerrain>Gravel</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravel</replacedTerrain>
					</li>
					<li>
						<originalTerrain>Sand</originalTerrain>
						<replacedTerrain>MorrowRim_AshSand</replacedTerrain>
					</li>
				</terrainReplacers>
