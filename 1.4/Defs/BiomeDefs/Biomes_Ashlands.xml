<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<BiomeDef ParentName="MorrowRim_AshlandsBase">
		<defName>MorrowRim_Ashlands</defName>
		<label>ashlands</label>
		<description>Highly fertile soil allows for a thriving, if unusual, ecosystem. Frequent ash storms slowly kill all life-forms that are not adapted to the area, making this a difficult place to settle.</description>
		<workerClass>MorrowRim2.BiomeWorker_Ashlands</workerClass>
		<texture>World/Biomes/MorrowRim_Ashlands</texture>
		<modExtensions>
			<li Class="MorrowRim2.BiomeProperties">
				<earlyLoader>true</earlyLoader>
				<baseBiome>true</baseBiome>
				<restrictPlantsToTerrain>true</restrictPlantsToTerrain>
				<increasePollutedFertility>true</increasePollutedFertility>
				<forcedRockType>MorrowRim_Basalt</forcedRockType>
				<terrainReplacers>
					<li>
						<originalTerrain>Gravel</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravel</replacedTerrain>
					</li>
					<li>
						<originalTerrain>Sand</originalTerrain>
						<replacedTerrain>MorrowRim_AshSand</replacedTerrain>
					</li>
				</terrainReplacers>
				<roadReplacers>
					<li>
						<originalTerrain>PackedDirt</originalTerrain>
						<replacedTerrain>MorrowRim_PackedAsh</replacedTerrain>
					</li>
				</roadReplacers>
				<dryToReplacers>
					<li>
						<originalTerrain>WaterShallow</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravel</replacedTerrain>
					</li>
					<li>
						<originalTerrain>WaterOceanShallow</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravel</replacedTerrain>
					</li>
				</dryToReplacers>
				<useAshlandCavePlants>true</useAshlandCavePlants>
				<useCustomCaveTerrain>true</useCustomCaveTerrain>
				<otherTerrainDef>MorrowRim_RichAshGravel</otherTerrainDef>
				<waterTerrainDef>WaterShallow</waterTerrainDef>
				<otherTerrainThreshold>0.25</otherTerrainThreshold>
				<waterThreshold>0.9</waterThreshold>
			</li>
		</modExtensions>
		<animalDensity>2.8</animalDensity>
		<plantDensity>0.3</plantDensity>
		<foragedFood>MorrowRim_RawAshYams</foragedFood>
		<terrainsByFertility>
			<li>
				<terrain>MorrowRim_AshSoil</terrain>
				<min>-999</min>
				<max>0.87</max>
			</li>
			<li>
				<terrain>MorrowRim_AshGravel</terrain>
				<min>0.87</min>
				<max>999</max>
			</li>
		</terrainsByFertility>
		<terrainPatchMakers>
			<li>
				<perlinFrequency>0.015</perlinFrequency>
				<thresholds>
					<li>
						<terrain>MorrowRim_RichAshSoil</terrain>
						<min>0.68</min>
						<max>0.76</max>
					</li>
					<li>
						<terrain>WaterShallow</terrain>
						<min>0.76</min>
						<max>0.98</max>
					</li>
					<li>
						<terrain>MorrowRim_RichAshSoil</terrain>
						<min>0.98</min>
						<max>99</max>
					</li>
				</thresholds>
			</li>
		</terrainPatchMakers>
		<baseWeatherCommonalities>
			<!-- Vanilla Weather -->
			<Clear>18</Clear>
			<Fog>1</Fog>
			<Rain>2</Rain>
			<DryThunderstorm>1</DryThunderstorm>
			<RainyThunderstorm>1</RainyThunderstorm>
			<FoggyRain>1</FoggyRain>
			<SnowGentle>4</SnowGentle>
			<SnowHard>4</SnowHard>
			<!-- MorrowRim weather -->
			<MorrowRim_Ashfall>4</MorrowRim_Ashfall>
			<MorrowRim_FoggyAshfall>2</MorrowRim_FoggyAshfall>
			<!-- Regrowth weather -->
			<RG_Drizzle MayRequire="ReGrowth.BOTR.Core">2</RG_Drizzle>
			<RG_FoggySnow MayRequire="ReGrowth.BOTR.Core">2</RG_FoggySnow>
			<RG_Overcast MayRequire="ReGrowth.BOTR.Core">6</RG_Overcast>
			<RG_Windy MayRequire="ReGrowth.BOTR.Core">8</RG_Windy>
			<RG_Blizzard MayRequire="ReGrowth.BOTR.Core">0.5</RG_Blizzard>
			<RG_Monsoon MayRequire="ReGrowth.BOTR.Core">0.5</RG_Monsoon>
		</baseWeatherCommonalities>
		<wildPlants>
			<!-- Ground covers -->
			<Plant_Grass>6</Plant_Grass>
			<MorrowRim_Plant_AshlandGrass>13</MorrowRim_Plant_AshlandGrass>
			<MorrowRim_Plant_AshlandDuneGrass>2</MorrowRim_Plant_AshlandDuneGrass>
			<MorrowRim_Plant_AshlandFungus>1</MorrowRim_Plant_AshlandFungus>
			<MorrowRim_Plant_Ashreed>0.2</MorrowRim_Plant_Ashreed>
			<Plant_Moss>0.2</Plant_Moss>
			<!-- Nutrition plants -->
			<MorrowRim_Plant_AshYam>0.2</MorrowRim_Plant_AshYam>
			<MorrowRim_Plant_Marshmerrow>0.1</MorrowRim_Plant_Marshmerrow>
			<MorrowRim_Plant_Scathecraw>0.2</MorrowRim_Plant_Scathecraw>
			<MorrowRim_Plant_Comberry>0.05</MorrowRim_Plant_Comberry>
			<!-- Resource plants -->
			<MorrowRim_Plant_Corkbulb>0.1</MorrowRim_Plant_Corkbulb>
			<MorrowRim_Plant_MuckSponge>0.1</MorrowRim_Plant_MuckSponge>
			<MorrowRim_Plant_ParasolBush>0.4</MorrowRim_Plant_ParasolBush>
			<MorrowRim_Plant_TramaShrub>0.2</MorrowRim_Plant_TramaShrub>
			<!-- Aesthetic plants -->
			<MorrowRim_Plant_WillowFlower>0.05</MorrowRim_Plant_WillowFlower>
			<MorrowRim_Plant_Stoneflower>0.1</MorrowRim_Plant_Stoneflower>
			<MorrowRim_Plant_AshlandFern>0.2</MorrowRim_Plant_AshlandFern>
			<MorrowRim_Plant_BlackAntherflower>0.05</MorrowRim_Plant_BlackAntherflower>
			<!-- Trees -->
			<MorrowRim_Plant_TreeEmperorParasol>0.4</MorrowRim_Plant_TreeEmperorParasol>
			<RB_Plant_Hive_Arctic MayRequire="sarg.rimbees">0.01</RB_Plant_Hive_Arctic>
			<RB_Plant_Hive_Icy MayRequire="sarg.rimbees">0.01</RB_Plant_Hive_Icy>
			<!-- ==========[Pollution]========== -->
			<!-- Polluted ground covers -->
			<Plant_GrayGrass MayRequire="Ludeon.RimWorld.Biotech">16</Plant_GrayGrass>
			<MorrowRim_Plant_GlowingAshreed MayRequire="Ludeon.RimWorld.Biotech">0.2</MorrowRim_Plant_GlowingAshreed>
			<!-- Polluted nutrition plants -->
			<MorrowRim_Plant_ToxYam MayRequire="Ludeon.RimWorld.Biotech">0.2</MorrowRim_Plant_ToxYam>
			<MorrowRim_Plant_GlowingScathecraw MayRequire="Ludeon.RimWorld.Biotech">0.2</MorrowRim_Plant_GlowingScathecraw>
			<MorrowRim_Plant_GlowingParasolBush MayRequire="Ludeon.RimWorld.Biotech">0.4</MorrowRim_Plant_GlowingParasolBush>
			<!-- Polluted resource plants -->
			<MorrowRim_Plant_TramaMass MayRequire="Ludeon.RimWorld.Biotech">0.2</MorrowRim_Plant_TramaMass>
			<MorrowRim_Plant_WasteSponge MayRequire="Ludeon.RimWorld.Biotech">0.1</MorrowRim_Plant_WasteSponge>
			<!-- Polluted trees -->
			<MorrowRim_Plant_TreeEmperorToxisol MayRequire="Ludeon.RimWorld.Biotech">0.4</MorrowRim_Plant_TreeEmperorToxisol>
		</wildPlants>
		<wildAnimals>
			<!-- prey animals -->
			<Rat>0.6</Rat>
			<MorrowRim_BantamGuar>0.1</MorrowRim_BantamGuar>
			<MorrowRim_Scuttler>0.1</MorrowRim_Scuttler>
			<MorrowRim_Vvardvark>0.1</MorrowRim_Vvardvark>
			<!-- herd animals -->
			<MorrowRim_Shalk>0.2</MorrowRim_Shalk>
			<MorrowRim_ShalkFungal>0.1</MorrowRim_ShalkFungal>
			<MorrowRim_Netch>0.5</MorrowRim_Netch>
			<MorrowRim_Guar>0.5</MorrowRim_Guar>
			<MorrowRim_NixOx>0.2</MorrowRim_NixOx>
			<!-- predators -->
			<MorrowRim_NixHound>0.3</MorrowRim_NixHound>
			<MorrowRim_Kagouti>0.2</MorrowRim_Kagouti>
			<MorrowRim_Alit>0.1</MorrowRim_Alit>
			<MorrowRim_CliffRacer>0.1</MorrowRim_CliffRacer>
			<!-- special -->
		</wildAnimals>
		<pollutionWildAnimals>
			<Rat>0.6</Rat>
			<WasteRat MayRequire="Ludeon.RimWorld.Biotech">0.2</WasteRat>
			<MorrowRim_ShalkGlowing MayRequire="Ludeon.RimWorld.Biotech">0.1</MorrowRim_ShalkGlowing>
			<MorrowRim_NetchGlowing MayRequire="Ludeon.RimWorld.Biotech">0.5</MorrowRim_NetchGlowing>
			<MorrowRim_NixOxGlowing MayRequire="Ludeon.RimWorld.Biotech">0.2</MorrowRim_NixOxGlowing>
			<MorrowRim_NixHoundGlowing MayRequire="Ludeon.RimWorld.Biotech">0.3</MorrowRim_NixHoundGlowing>
			<MorrowRim_CliffRacer>0.2</MorrowRim_CliffRacer>
		</pollutionWildAnimals>
	</BiomeDef>
</Defs>