<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<BiomeDef ParentName="Mashed_Ashlands_AshlandsVolcanicBase">
		<defName>Mashed_Ashlands_VolcanicSulphurPitsAshlands</defName>
		<label>volcanic sulphur pools</label>
		<description>An area of volcanic ashlands dominated by large pools of thermally-heated water. These pools are rich in dissolved sulphur, giving them a noticeable green tint, and a very distinctive smell. While not exactly safe to drink, many find bathing in the pools incredibly relaxing.\n\nSome cultures consider these regions to be gateways to the underworld, while others believe that regularly bathing in the sulphuric waters is a means to achieving immortality.</description>
		<workerClass>Mashed_Ashlands.BiomeWorker_VolcanicSulphurPitsAshlands</workerClass>
		<texture>World/Biomes/Mashed_Ashlands_VolcanicSulphurPitsAshlands</texture>
		<modExtensions>
			<li Class="Mashed_Ashlands.BiomeProperties">
				<lateLoader>true</lateLoader>
				<restrictPlantsToTerrain>true</restrictPlantsToTerrain>
				<increasePollutedFertility>true</increasePollutedFertility>
				<forcedRockType>Mashed_Ashlands_BasaltScorched</forcedRockType>
				<steamGeyserMultiplier>1.5</steamGeyserMultiplier>
				<terrainReplacers>
					<li>
						<originalTerrain>Gravel</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_AshGravelVolcanic</replacedTerrain>
					</li>
					<li>
						<originalTerrain>Sand</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_AshSandVolcanic</replacedTerrain>
					</li>
				</terrainReplacers>
				<roadReplacers>
					<li>
						<originalTerrain>PackedDirt</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_PackedAshVolcanic</replacedTerrain>
					</li>
				</roadReplacers>
				<dryToReplacers>
					<li>
						<originalTerrain>WaterShallow</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_AshGravelVolcanic</replacedTerrain>
					</li>
					<li>
						<originalTerrain>WaterOceanShallow</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_AshGravelVolcanic</replacedTerrain>
					</li>
				</dryToReplacers>
				<useAshlandCavePlants>true</useAshlandCavePlants>
				<useCustomCaveTerrain>true</useCustomCaveTerrain>
				<otherTerrainDef>Mashed_Ashlands_RichAshGravelVolcanic</otherTerrainDef>
				<waterTerrainDef>WaterShallow</waterTerrainDef>
				<otherTerrainThreshold>0.25</otherTerrainThreshold>
				<waterThreshold>0.9</waterThreshold>
			</li>
			<li Class="BiomesKit.BiomesKitControls" MayRequire="odeum.wmbp">
				<forested>true</forested>
				<uniqueHills>true</uniqueHills>
				<materialRandomRotation>false</materialRandomRotation>
				<smallHillSizeMultiplier>1.5</smallHillSizeMultiplier>
				<largeHillSizeMultiplier>2</largeHillSizeMultiplier>
				<mountainSizeMultiplier>1.4</mountainSizeMultiplier>
				<impassableSizeMultiplier>1.3</impassableSizeMultiplier>
			</li>
		</modExtensions>
		<animalDensity>1.2</animalDensity>
		<plantDensity>0.4</plantDensity>
		<terrainsByFertility>
			<li>
				<terrain>Mashed_Ashlands_CrackedAshSoilVolcanic</terrain>
				<min>-999</min>
				<max>0.4</max>
			</li>
			<li>
				<terrain>Mashed_Ashlands_AshSoilVolcanic</terrain>
				<min>0.4</min>
				<max>0.8</max>
			</li>
			<li>
				<terrain>Mashed_Ashlands_RichAshSoilVolcanic</terrain>
				<min>0.8</min>
				<max>999</max>
			</li>
		</terrainsByFertility>
		<terrainPatchMakers>
			<li>
				<perlinFrequency>0.027</perlinFrequency>
				<thresholds>
					<li>
						<terrain>Mashed_Ashlands_SulphuricSand</terrain>
						<min>0.25</min>
						<max>0.5</max>
					</li>
					<li>
						<terrain>Mashed_Ashlands_ShallowSulphuricWater</terrain>
						<min>0.5</min>
						<max>0.8</max>
					</li>
					<li>
						<terrain>Mashed_Ashlands_DeepSulphuricWater</terrain>
						<min>0.8</min>
						<max>99</max>
					</li>
				</thresholds>
			</li>
			<li>
				<perlinFrequency>0.04</perlinFrequency>
				<thresholds>
					<li>
						<terrain>Mashed_Ashlands_SulphuricSand</terrain>
						<min>0.35</min>
						<max>0.65</max>
					</li>
					<li>
						<terrain>Mashed_Ashlands_ShallowSulphuricWater</terrain>
						<min>0.65</min>
						<max>0.9</max>
					</li>
					<li>
						<terrain>Mashed_Ashlands_DeepSulphuricWater</terrain>
						<min>0.9</min>
						<max>99</max>
					</li>
				</thresholds>
			</li>
		</terrainPatchMakers>
		<wildPlants>
			<!-- Ground covers -->
			<Mashed_Ashlands_Plant_CharredAshlandGrass>11</Mashed_Ashlands_Plant_CharredAshlandGrass>
			<Mashed_Ashlands_Plant_AshlandFungus>0.2</Mashed_Ashlands_Plant_AshlandFungus>
			<!-- Nutrition plants -->
			<Mashed_Ashlands_Plant_AshYam>0.05</Mashed_Ashlands_Plant_AshYam>
			<Mashed_Ashlands_Plant_Scathecraw>0.2</Mashed_Ashlands_Plant_Scathecraw>
			<Mashed_Ashlands_Plant_AshPomegranate>0.1</Mashed_Ashlands_Plant_AshPomegranate>
			<!-- Resource plants -->
			<Mashed_Ashlands_Plant_Chillshroom>0.1</Mashed_Ashlands_Plant_Chillshroom>
			<Mashed_Ashlands_Plant_ParasolBush>0.02</Mashed_Ashlands_Plant_ParasolBush>
			<Mashed_Ashlands_Plant_TramaShrub>0.6</Mashed_Ashlands_Plant_TramaShrub>
			<!-- Aesthetic plants -->
			<Mashed_Ashlands_Plant_ScorchedBush>2</Mashed_Ashlands_Plant_ScorchedBush>
			<Mashed_Ashlands_Plant_FoyadaFungus>0.1</Mashed_Ashlands_Plant_FoyadaFungus>
			<Mashed_Ashlands_Plant_SulphurFungus>1</Mashed_Ashlands_Plant_SulphurFungus>
			<Mashed_Ashlands_Plant_FireFern>0.05</Mashed_Ashlands_Plant_FireFern>
			<!-- Trees -->
			<Mashed_Ashlands_GiantSulphuricCoprinus>0.2</Mashed_Ashlands_GiantSulphuricCoprinus>
			<Mashed_Ashlands_Plant_TreeWeepingLeathercap>0.2</Mashed_Ashlands_Plant_TreeWeepingLeathercap>
			<Mashed_Ashlands_Plant_TreeEmperorParasol>0.05</Mashed_Ashlands_Plant_TreeEmperorParasol>
			<Mashed_Ashlands_BurnedParasolStumpPermanent>0.05</Mashed_Ashlands_BurnedParasolStumpPermanent>
			<Mashed_Ashlands_BurnedStumpPermanent>0.15</Mashed_Ashlands_BurnedStumpPermanent>
			<RB_Plant_Hive_Arctic MayRequire="sarg.rimbees">0.01</RB_Plant_Hive_Arctic>
			<RB_Plant_Hive_Icy MayRequire="sarg.rimbees">0.01</RB_Plant_Hive_Icy>
			<!-- ==========[Pollution]========== -->
			<!-- Polluted ground covers -->
			<Plant_GrayGrass MayRequire="Ludeon.RimWorld.Biotech">8</Plant_GrayGrass>
			<Mashed_Ashlands_GlowingEntoloma MayRequire="Ludeon.RimWorld.Biotech">0.5</Mashed_Ashlands_GlowingEntoloma>
			<!-- Polluted nutrition plants -->
			<Mashed_Ashlands_Plant_ToxYam MayRequire="Ludeon.RimWorld.Biotech">0.05</Mashed_Ashlands_Plant_ToxYam>
			<Mashed_Ashlands_Plant_GlowingScathecraw MayRequire="Ludeon.RimWorld.Biotech">0.4</Mashed_Ashlands_Plant_GlowingScathecraw>
			<Mashed_Ashlands_Plant_GlowingParasolBush MayRequire="Ludeon.RimWorld.Biotech">0.2</Mashed_Ashlands_Plant_GlowingParasolBush>
			<!-- Polluted resource plants -->
			<Mashed_Ashlands_Plant_TramaMass MayRequire="Ludeon.RimWorld.Biotech">1</Mashed_Ashlands_Plant_TramaMass>
			<!-- Polluted trees -->
			<Mashed_Ashlands_Plant_TreeEmperorToxisol MayRequire="Ludeon.RimWorld.Biotech">0.1</Mashed_Ashlands_Plant_TreeEmperorToxisol>
		</wildPlants>
		<wildAnimals>
			<!-- prey animals -->
			<Mashed_Ashlands_Scuttler>0.2</Mashed_Ashlands_Scuttler>
			<Mashed_Ashlands_AshHopper>0.3</Mashed_Ashlands_AshHopper>
			<!-- herd animals -->
			<Mashed_Ashlands_Shalk>0.1</Mashed_Ashlands_Shalk>
			<Mashed_Ashlands_Netch>0.4</Mashed_Ashlands_Netch>
			<Mashed_Ashlands_Guar>0.4</Mashed_Ashlands_Guar>
			<!-- predators -->
			<Mashed_Ashlands_Kagouti>0.2</Mashed_Ashlands_Kagouti>
			<Mashed_Ashlands_Alit>0.1</Mashed_Ashlands_Alit>
			<Mashed_Ashlands_CliffRacer>0.2</Mashed_Ashlands_CliffRacer>
			<!-- ESCP Trolls -->
			<ESCP_TrollBarren MayRequire="sirmashedpotato.escp.trolls">0.05</ESCP_TrollBarren>
			<ESCP_TrollHill MayRequire="sirmashedpotato.escp.trolls">0.025</ESCP_TrollHill>
			<ESCP_TrollCave MayRequire="sirmashedpotato.escp.trolls">0.025</ESCP_TrollCave>
			<ESCP_TrollCoastal MayRequire="sirmashedpotato.escp.trolls">0.025</ESCP_TrollCoastal>
			<ESCP_TrollUdyrfrykte MayRequire="sirmashedpotato.escp.trolls">0.01</ESCP_TrollUdyrfrykte>
			<!-- ESCP Spriggan-->
			<ESCP_Spriggan_Burnt MayRequire="pphhyy.escp.spriggan">0.05</ESCP_Spriggan_Burnt>
			<ESCP_Spriggan_Parasol MayRequire="pphhyy.escp.spriggan">0.01</ESCP_Spriggan_Parasol>
			<ESCP_Spriggan_Matron MayRequire="pphhyy.escp.spriggan">0.01</ESCP_Spriggan_Matron>
			<ESCP_Spriggan_EarthMother MayRequire="pphhyy.escp.spriggan">0.005</ESCP_Spriggan_EarthMother>
			<!-- special -->
		</wildAnimals>
		<pollutionWildAnimals>
			<Mashed_Ashlands_AshHopperGlowing MayRequire="Ludeon.RimWorld.Biotech">0.3</Mashed_Ashlands_AshHopperGlowing>
			<Mashed_Ashlands_NetchGlowing MayRequire="Ludeon.RimWorld.Biotech">0.2</Mashed_Ashlands_NetchGlowing>
			<Mashed_Ashlands_NixOxGlowing MayRequire="Ludeon.RimWorld.Biotech">0.05</Mashed_Ashlands_NixOxGlowing>
			<Mashed_Ashlands_NixHoundGlowing MayRequire="Ludeon.RimWorld.Biotech">0.05</Mashed_Ashlands_NixHoundGlowing>
			<Mashed_Ashlands_CliffRacer>0.4</Mashed_Ashlands_CliffRacer>
		</pollutionWildAnimals>
	</BiomeDef>
</Defs>