<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<BiomeDef ParentName="MorrowRim_AshlandsBlightedBase">
		<defName>MorrowRim_BlightedCragIslandAshlands</defName>
		<label>blighted crag islands</label>
		<description>A collection of small, lifeless, islands, turned into a wasteland by a nearby blighted volcano. Almost nothing living can be found here... except for cliff racers</description>
		<workerClass>MorrowRim2.BiomeWorker_BlightedCragIslandAshlands</workerClass>
		<texture>World/Biomes/MorrowRim_BlightedCragIslandAshlands</texture>
		<modExtensions>
			<li Class="MorrowRim2.BiomeProperties">
                <earlyLoader>true</earlyLoader>
				<disableBeaches>true</disableBeaches>
				<forceHilliness>true</forceHilliness>
				<restrictPlantsToTerrain>true</restrictPlantsToTerrain>
				<increasePollutedFertility>true</increasePollutedFertility>
				<forcedRockType>MorrowRim_Basalt</forcedRockType>
				<terrainReplacers>
					<li>
						<originalTerrain>Gravel</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravelBlighted</replacedTerrain>
					</li>
					<li>
						<originalTerrain>Sand</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravelBlighted</replacedTerrain>
					</li>
				</terrainReplacers>
				<roadReplacers>
					<li>
						<originalTerrain>PackedDirt</originalTerrain>
						<replacedTerrain>MorrowRim_PackedAshBlighted</replacedTerrain>
					</li>
				</roadReplacers>
				<dryToReplacers>
					<li>
						<originalTerrain>WaterShallow</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravelBlighted</replacedTerrain>
					</li>
					<li>
						<originalTerrain>WaterOceanShallow</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravelBlighted</replacedTerrain>
					</li>
				</dryToReplacers>
				<useAshlandCavePlants>true</useAshlandCavePlants>
				<useCustomCaveTerrain>true</useCustomCaveTerrain>
				<otherTerrainDef>MorrowRim_AshGravelBlighted</otherTerrainDef>
				<waterTerrainDef>WaterShallow</waterTerrainDef>
				<otherTerrainThreshold>0.25</otherTerrainThreshold>
				<waterThreshold>0.4</waterThreshold>
            </li>
			<li Class="GeologicalLandforms.BiomeProperties" MayRequire="m00nl1ght.GeologicalLandforms">
				<allowLandforms>false</allowLandforms>
				<allowBiomeTransitions>false</allowBiomeTransitions>
			</li>
		</modExtensions>
		<animalDensity>0.4</animalDensity>
		<plantDensity>0.02</plantDensity>
		<movementDifficulty>1</movementDifficulty>
		<terrainsByFertility>
