					<li>
						<originalTerrain>PackedDirt</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_PackedAsh</replacedTerrain>
					</li>
				</roadReplacers>
				<dryToReplacers>
					<li>
						<originalTerrain>WaterShallow</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_AshGravel</replacedTerrain>
					</li>
					<li>
						<originalTerrain>WaterOceanShallow</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_AshGravel</replacedTerrain>
					</li>
				</dryToReplacers>
				<useAshlandCavePlants>true</useAshlandCavePlants>
				<useCustomCaveTerrain>true</useCustomCaveTerrain>
				<otherTerrainDef>Mashed_Ashlands_RichAshGravel</otherTerrainDef>
				<waterTerrainDef>Marsh</waterTerrainDef>
				<otherTerrainThreshold>0.25</otherTerrainThreshold>
				<waterThreshold>0.4</waterThreshold>
			</li>
			<li Class="GeologicalLandforms.BiomeProperties" MayRequire="m00nl1ght.GeologicalLandforms">
				<allowLandforms>false</allowLandforms>
				<allowBiomeTransitions>false</allowBiomeTransitions>
