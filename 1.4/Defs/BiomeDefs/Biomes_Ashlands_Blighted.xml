			<!-- Polluted resource plants -->
			<MorrowRim_Plant_TramaMass MayRequire="Ludeon.RimWorld.Biotech">1</MorrowRim_Plant_TramaMass>
			<!-- Polluted trees -->
		</wildPlants>
		<wildAnimals>
			<!-- prey animals -->
			<Rat>0.6</Rat>
			<MorrowRim_Scuttler>0.1</MorrowRim_Scuttler>
			<!-- herd animals -->
			<MorrowRim_Shalk>0.3</MorrowRim_Shalk>
			<MorrowRim_Netch>0.2</MorrowRim_Netch>
			<MorrowRim_Guar>0.2</MorrowRim_Guar>
			<!-- predators -->
			<MorrowRim_Kagouti>0.1</MorrowRim_Kagouti>
			<MorrowRim_Alit>0.1</MorrowRim_Alit>
			<MorrowRim_CliffRacer>0.4</MorrowRim_CliffRacer>
			<!-- special -->
		</wildAnimals>
		<pollutionWildAnimals MayRequire="Ludeon.RimWorld.Biotech">
			<Rat>0.6</Rat>
			<WasteRat MayRequire="Ludeon.RimWorld.Biotech">0.2</WasteRat>
			<MorrowRim_NetchGlowing MayRequire="Ludeon.RimWorld.Biotech">0.1</MorrowRim_NetchGlowing>
			<MorrowRim_CliffRacer>0.4</MorrowRim_CliffRacer>
		</pollutionWildAnimals>
	</BiomeDef>
</Defs>