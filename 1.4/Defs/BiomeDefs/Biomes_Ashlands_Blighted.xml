<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<BiomeDef ParentName="MorrowRim_AshlandsBlightedBase" Name="MorrowRim_BlightedAshlandsBase">
		<defName>MorrowRim_BlightedAshlands</defName>
		<label>blighted ashlands</label>
		<description>Once a thriving ashlands, the landscape has been devastated by a nearby blighted volcano, leaving an inhospitable wasteland behind. The sky is almost permanently covered in a thick cloud of ash. Any rain that falls here contains ash-blight, driving animals mad and causing crop blights. Few animals and plants are capable of living here, with the waters being completely devoid of life. Unless you enjoy eating scathecraw, food will be difficult to obtain.</description>
		<workerClass>MorrowRim2.BiomeWorker_BlightedAshlands</workerClass>
		<texture>World/Biomes/MorrowRim_BlightedAshlands</texture>
		<modExtensions>
			<li Class="MorrowRim2.BiomeProperties">
				<earlyLoader>true</earlyLoader>
				<baseBiome>true</baseBiome>
				<restrictPlantsToTerrain>true</restrictPlantsToTerrain>
				<increasePollutedFertility>false</increasePollutedFertility>
				<forcedRockType>MorrowRim_Basalt</forcedRockType>
				<terrainReplacers>
					<li>
						<originalTerrain>Gravel</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravelBlighted</replacedTerrain>
					</li>
					<li>
						<originalTerrain>Sand</originalTerrain>
						<replacedTerrain>MorrowRim_AshSandBlighted</replacedTerrain>
					</li>
					<li>
						<originalTerrain>WaterMovingShallow</originalTerrain>
						<replacedTerrain>MorrowRim_CrackedAshSoilBlighted</replacedTerrain>
					</li>
					<li>
						<originalTerrain>WaterMovingChestDeep</originalTerrain>
						<replacedTerrain>MorrowRim_CrackedAshSoilBlighted</replacedTerrain>
					</li>
				</terrainReplacers>
				<roadReplacers>
					<li>
						<originalTerrain>PackedDirt</originalTerrain>
						<replacedTerrain>MorrowRim_PackedAshBlighted</replacedTerrain>
					</li>
				</roadReplacers>
				<dryToReplacers>
					<li>
						<originalTerrain>WaterShallow</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravelBlighted</replacedTerrain>
					</li>
					<li>
						<originalTerrain>WaterOceanShallow</originalTerrain>
						<replacedTerrain>MorrowRim_AshGravelBlighted</replacedTerrain>
					</li>
				</dryToReplacers>
				<useAshlandCavePlants>true</useAshlandCavePlants>
				<useCustomCaveTerrain>true</useCustomCaveTerrain>
				<otherTerrainDef>MorrowRim_AshGravel</otherTerrainDef>
				<waterTerrainDef>WaterShallow</waterTerrainDef>
				<otherTerrainThreshold>0.25</otherTerrainThreshold>
				<waterThreshold>0.9</waterThreshold>
			</li>
		</modExtensions>
		<animalDensity>0.4</animalDensity>
		<plantDensity>0.03</plantDensity>
		<terrainsByFertility>
			<li>
				<terrain>MorrowRim_AshSoilBlighted</terrain>
				<min>-999</min>
				<max>0.87</max>
			</li>
			<li>
				<terrain>MorrowRim_AshGravelBlighted</terrain>
				<min>0.87</min>
				<max>999</max>
			</li>
		</terrainsByFertility>
		<terrainPatchMakers>
			<li>
				<perlinFrequency>0.015</perlinFrequency>
				<thresholds>
					<li>
						<terrain>MorrowRim_AshGravelBlighted</terrain>
						<min>0.68</min>
						<max>0.76</max>
					</li>
					<li>
						<terrain>MorrowRim_CrackedAshSoilBlighted</terrain>
						<min>0.76</min>
						<max>99</max>
					</li>
				</thresholds>
			</li>
		</terrainPatchMakers>
		<baseWeatherCommonalities>
			<!-- Vanilla Weather -->
			<Clear>18</Clear>
			<Fog>1</Fog>
			<Rain>0.1</Rain>
			<DryThunderstorm>1</DryThunderstorm>
			<!-- MorrowRim weather -->
			<MorrowRim_Ashfall>4</MorrowRim_Ashfall>
			<MorrowRim_FoggyAshfall>2</MorrowRim_FoggyAshfall>
			<!-- Regrowth weather -->
			<RG_Drizzle MayRequire="ReGrowth.BOTR.Core">0.3</RG_Drizzle>
			<RG_Overcast MayRequire="ReGrowth.BOTR.Core">6</RG_Overcast>
			<RG_Windy MayRequire="ReGrowth.BOTR.Core">8</RG_Windy>
		</baseWeatherCommonalities>
		<wildPlants>
			<!-- Ground covers -->
			<MorrowRim_Plant_AshlandGrass>0.2</MorrowRim_Plant_AshlandGrass>
			<!-- Nutrition plants -->
			<MorrowRim_Plant_Scathecraw>0.2</MorrowRim_Plant_Scathecraw>
			<!-- Resource plants -->
			<MorrowRim_Plant_TramaShrub>0.5</MorrowRim_Plant_TramaShrub>
			<!-- Aesthetic plants -->
