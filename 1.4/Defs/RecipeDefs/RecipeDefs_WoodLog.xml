<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[Mashed_Ashlands_MakeWoodLog]==========-->
	<RecipeDef Name="Mashed_Ashlands_MakeWoodLogBase">
		<defName>Mashed_Ashlands_MakeWoodLog</defName>
		<label>make wood logs from corkbulb and muck</label>
		<description>Make 10 wood logs from 20 corkbulb roots and 3 muck.\n\nYou're not really making wood logs, but they look basically the same. And if you can barely tell the difference, does it really matter if it's all a lie?</description>
		<jobString>Making wood logs.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>900</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<recipeUsers>
			<li>CraftingSpot</li>
			<li>TableSculpting</li>
		</recipeUsers>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Mashed_Ashlands_RawCorkbulbRoot</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Mashed_Ashlands_RawMuck</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Mashed_Ashlands_RawCorkbulbRoot</li>
				<li>Mashed_Ashlands_RawMuck</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<WoodLog>10</WoodLog>
		</products>
		<workSkill>Crafting</workSkill>
		<researchPrerequisite>Mashed_Ashlands_AshSurvival_Beginner</researchPrerequisite>
	</RecipeDef>
	<!-- ==========[Mashed_Ashlands_MakeWoodLogBulk]==========-->
	<RecipeDef ParentName="Mashed_Ashlands_MakeWoodLogBase">
		<defName>Mashed_Ashlands_MakeWoodLogBulk</defName>
		<label>make wood logs from corkbulb and muck x4</label>
		<description>Make 40 wood logs from 80 corkbulb roots and 12 muck.\n\nYou're not really making wood logs, but they look basically the same. And if you can barely tell the difference, does it really matter if it's all a lie?</description>
		<workAmount>1800</workAmount>
		<ingredients Inherit="False">
			<li>
				<filter>
					<thingDefs>
						<li>Mashed_Ashlands_RawCorkbulbRoot</li>
					</thingDefs>
				</filter>
				<count>80</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Mashed_Ashlands_RawMuck</li>
					</thingDefs>
				</filter>
				<count>12</count>
			</li>
		</ingredients>
		<products Inherit="False">
			<WoodLog>40</WoodLog>
		</products>
	</RecipeDef>
</Defs>