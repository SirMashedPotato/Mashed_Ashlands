<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Alien Vs Predator</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/AlienRace.ThingDef_AlienRace[@Name="AvP_Synth_RaceBase"]/statBases</xpath>
					<value>
						<MorrowRim_AshResistance>1</MorrowRim_AshResistance>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[@Name="AvP_BaseXenomorph" or @Name="AvP_BaseNeomorph"]/statBases</xpath>
					<value>
						<MorrowRim_AshResistance>1</MorrowRim_AshResistance>
					</value>
				</li>
				<!-- Yuatja Apparel -->
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="AvP_Yautja_Armour_BioMaskLight"]/equippedStatOffsets</xpath>
					<value>
						<MorrowRim_AshResistance>0.55</MorrowRim_AshResistance>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="AvP_Yautja_Armour_BioMask"]/equippedStatOffsets</xpath>
					<value>
						<MorrowRim_AshResistance>0.4</MorrowRim_AshResistance>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="AvP_Yautja_Armour_BioMaskElite" or defName="AvP_Yautja_Armour_BioMaskFalconer"]/equippedStatOffsets</xpath>
					<value>
						<MorrowRim_AshResistance>0.6</MorrowRim_AshResistance>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="AvP_Yautja_Armour_BioMaskOrnate"]/equippedStatOffsets</xpath>
					<value>
						<MorrowRim_AshResistance>0.5</MorrowRim_AshResistance>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
