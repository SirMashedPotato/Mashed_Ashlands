<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ==========[Mashed_Ashlands_MakeClothFromKresh]==========-->
	<RecipeDef ParentName="ProcessRaw" Name="Mashed_Ashlands_ProcessRawKreshweedBase">
		<defName>Mashed_Ashlands_ProcessRawKreshweed</defName>
		<label>weave kresh cloth</label>
		<description>Weave 20 raw kreshweed into 20 kresh cloth.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Mashed_Ashlands_RawKreshweed</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Mashed_Ashlands_RawKreshweed</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Mashed_Ashlands_KreshCloth>20</Mashed_Ashlands_KreshCloth>
		</products>
		<skillRequirements>
			<Crafting>4</Crafting>
		</skillRequirements>
		<recipeUsers>
			<li>CraftingSpot</li>
			<li>HandTailoringBench</li>
			<li>ElectricTailoringBench</li>
			<li MayRequire="dankpyon.medieval.overhaul">DankPyon_SpinningWheel</li>
		</recipeUsers>
		<researchPrerequisite>Mashed_Ashlands_AshSurvival_Beginner</researchPrerequisite>
	</RecipeDef>
	<!-- ==========[Mashed_Ashlands_ProcessRawKreshweedBulk]==========-->
	<RecipeDef ParentName="Mashed_Ashlands_ProcessRawKreshweedBase">
		<defName>Mashed_Ashlands_ProcessRawKreshweedBulk</defName>
		<label>weave kresh cloth x4</label>
		<description>Weave 80 raw kreshweed into 80 kresh cloth.</description>
		<workAmount>1600</workAmount>
		<ingredients Inherit="False">
			<li>
				<filter>
					<thingDefs>
						<li>Mashed_Ashlands_RawKreshweed</li>
					</thingDefs>
				</filter>
				<count>80</count>
			</li>
		</ingredients>
		<products Inherit="False">
			<Mashed_Ashlands_KreshCloth>80</Mashed_Ashlands_KreshCloth>
		</products>
	</RecipeDef>
	<!-- ==========[Mashed_Ashlands_MakeDyeFromInkCap]==========-->
	<RecipeDef ParentName="Mashed_Ashlands_RefineBase" Name="Mashed_Ashlands_MakeDyeFromInkCapBase">
		<defName>Mashed_Ashlands_MakeDyeFromInkCap</defName>
		<label>make dye from ink-cap</label>
		<description>Make 16 raw ink-cap into 4 dye.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Mashed_Ashlands_RawInkCap</li>
					</thingDefs>
				</filter>
				<count>16</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Mashed_Ashlands_RawInkCap</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Dye>4</Dye>
		</products>
		<researchPrerequisite>Mashed_Ashlands_AshSurvival_Beginner</researchPrerequisite>
	</RecipeDef>
	<!-- ==========[Mashed_Ashlands_MakeDyeFromInkCapBulk]==========-->
	<RecipeDef ParentName="Mashed_Ashlands_MakeDyeFromInkCapBase">
		<defName>Mashed_Ashlands_MakeDyeFromInkCapBulk</defName>
		<label>make dye from ink-cap x4</label>
		<description>Make 64 raw ink-cap into 16 dye.</description>
		<workAmount>1000</workAmount>
		<ingredients Inherit="False">
			<li>
				<filter>
					<thingDefs>
						<li>Mashed_Ashlands_RawInkCap</li>
					</thingDefs>
				</filter>
				<count>64</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Mashed_Ashlands_RawInkCap</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products Inherit="False">
			<Dye>16</Dye>
		</products>
	</RecipeDef>
</Defs>
