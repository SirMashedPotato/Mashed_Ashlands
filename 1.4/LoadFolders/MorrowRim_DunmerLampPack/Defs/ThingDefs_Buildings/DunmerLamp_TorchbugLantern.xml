<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<!-- ===== [Mashed_Ashlands_DunmerPaperLanternTorchbug_Base] ===== -->
	<ThingDef ParentName="Mashed_Ashlands_TorchbugLamp_Base" Name="Mashed_Ashlands_DunmerPaperLanternTorchbug_Base" Abstract="True">
		<label>Dunmeri torchbug lantern</label>
		<description>A traditional Dunmeri paper lantern, containing some torchbugs. Provides a reasonable amount of light, though not as much as a regular torch lamp. The torchbugs will need to be fed either insect meat, raw ash fungus, or parasol moss, every now and then.\n\nCan be placed on top of buildings, and the colour of the paper matches the colour of the light emitted.</description>
		<modExtensions>
			<li Class="Mashed_ColourableLantern.BuildingProperties"/>
			<li MayRequire="owlchemist.perspectivebuildings" Class="Perspective.Offsetter">
				<mirror>False</mirror>
				<offsets>
					<li>(0,0,0.3)</li>
					<li>(0,0,0.5)</li>
					<li>(0,0.3,-0.3)</li>
					<li>(0,0,-0.5)</li>
				</offsets>
			</li>
		</modExtensions>
		<graphicData>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<statBases>
			<Mass>3</Mass>
		</statBases>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>8</glowRadius>
				<glowColor>(214,148,94,0)</glowColor>
				<colorPickerEnabled>true</colorPickerEnabled>
				<darklightToggle>true</darklightToggle>
			</li>
			<li>
				<compClass>CompColorable</compClass>
			</li>
			<li Class="Mashed_ColourableLantern.CompProperties_GlowColourMatcher"/>
		</comps>
		<clearBuildingArea>false</clearBuildingArea>
		<altitudeLayer>BuildingOnTop</altitudeLayer>
		<building>
	        <isEdifice>false</isEdifice>    
		</building>
		<researchPrerequisites>
			<li>Mashed_Ashlands_AshSurvival_Beginner</li>
		</researchPrerequisites>
	</ThingDef>
	<!-- ===== [Mashed_Ashlands_DunmerPaperLanternTorchbug_A] ===== -->
	<ThingDef ParentName="Mashed_Ashlands_DunmerPaperLanternTorchbug_Base">
		<defName>Mashed_Ashlands_DunmerPaperLanternTorchbug_A</defName>
		<graphicData>
			<texPath>Things/Building/Furniture/MorrowRim_DunmerPaperLanterns/MorrowRim_DunmerPaperLantern_A</texPath>
		</graphicData>
		<costList Inherit="False">
			<Steel>5</Steel>
			<Mashed_Ashlands_ParasolWoodLog>10</Mashed_Ashlands_ParasolWoodLog>
		</costList>
	</ThingDef>
