<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[MorrowRim_Plant_GlowingAshreed]==========-->
	<ThingDef ParentName="MorrowRim_Plant_AshreedBase">
		<defName>MorrowRim_Plant_GlowingAshreed</defName>
		<label>glowing ashreed</label>
		<description>A mutated species of wild grass adapted for life in polluted ashland regions. Often found growing near sources of polluted water.</description>
		<graphicData>
			<texPath>Things/Plant/MorrowRim_GlowingAshreed</texPath>
		</graphicData>
		<plant>
			<pollution>PollutedOnly</pollution>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>1</glowRadius>
				<glowColor>(84,94,33,0)</glowColor>
			</li>
		</comps>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_GlowingDraggleTails]==========-->
	<ThingDef ParentName="MorrowRim_Plant_DraggleTailsBase">
		<defName>MorrowRim_Plant_GlowingDraggleTails</defName>
		<label>glowing draggle tails</label>
		<description>A mutated species of the common draggle tails, adapted for life in highly polluted ashland regions. They produce an ominous glow, not powerful enough to grow nearby plants with, but enough to ensure one doesn't lose their way at night.</description>
		<graphicData>
			<texPath>Things/Plant/MorrowRim_GlowingDraggleTails</texPath>
		</graphicData>
		<plant>
			<pollution>PollutedOnly</pollution>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>1</glowRadius>
				<glowColor>(84,94,33,0)</glowColor>
			</li>
		</comps>
	</ThingDef>
	<!-- ==========[MorrowRim_Plant_GlowingRussula]==========-->
	<ThingDef ParentName="MorrowRim_PlantBase">
		<defName>MorrowRim_Plant_GlowingRussula</defName>
		<label>glowing russula</label>
		<description>A species of small mushroom, often found growing in highly polluted ashland regions, usually in caves or swamps. Its gloomy colouration and glow is quite unsettling. Capable of growing in complete darkness, but needs ash rich ground to grow in.</description>
		<modExtensions>
			<li Class="MorrowRim2.PlantProperties">
				<ashlandCavePlant>true</ashlandCavePlant>
				<cavePlantCommonality>0.2</cavePlantCommonality>
				<terrainAffordancesToSow>
					<li>MorrowRim_GrowAsh</li>
				</terrainAffordancesToSow>
			</li>
		</modExtensions>
		<selectable>false</selectable>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Beauty>4</Beauty>
			<BeautyOutdoors>4</BeautyOutdoors>
			<Nutrition>0.35</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/MorrowRim_GlowingRussula</texPath>
		</graphicData>
		<hideAtSnowDepth>0.5</hideAtSnowDepth>
		<plant>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>1</growOptimalGlow>
			<pollution>PollutedOnly</pollution>
			<fertilityMin>0.05</fertilityMin>
			<fertilitySensitivity>0</fertilitySensitivity>
			<growDays>4.6</growDays>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>0.15~0.35</visualSizeRange>
			<topWindExposure>0.05</topWindExposure>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>8</wildClusterWeight>
			<wildOrder>1</wildOrder>
			<sowResearchPrerequisites>
				<li>MorrowRim_AshSowing_Intermediate</li>
			</sowResearchPrerequisites>
			<sowWork>200</sowWork>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(3,69,47,0)</glowColor>
			</li>
		</comps>
	</ThingDef>
