<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>MorrowRim - Dunmer Styles</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<!-- ==========[Ash Planter]==========-->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="MorrowRim_Dunmeri_AshPlanter"]/altitudeLayer</xpath>
					<value>
						<altitudeLayer>SmallWire</altitudeLayer>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="MorrowRim_Dunmeri_AshPlanter"]/fertility</xpath>
					<value>
						<fertility>1</fertility>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="MorrowRim_Dunmeri_AshPlanter"]/building/defaultPlantToGrow</xpath>
					<value>
						<defaultPlantToGrow>Mashed_Ashlands_Plant_AshYam</defaultPlantToGrow>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName="MorrowRim_Dunmeri_AshPlanter"]/building/sowTag</xpath>
					<value>
						<sowTag>Mashed_Ashlands_AshPlanter</sowTag>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="MorrowRim_Dunmeri_AshPlanter"]</xpath>
					<value>
						<researchPrerequisites>
							<li>Mashed_Ashlands_AshSowing_Beginner</li>
							<li>Mashed_Ashlands_AshSurvival_Beginner</li>
						</researchPrerequisites>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>

