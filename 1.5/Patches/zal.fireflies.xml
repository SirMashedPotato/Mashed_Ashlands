<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Fireflies (Continued)</li>
		</mods>
		<match Class="PatchOperationSequence">
			<operations>
				<li Class="PatchOperationAdd">
					<xpath>Defs/Fireflies.FireflySettingsDef[defName="FireflySettings"]/maxGroupsByBiome</xpath>
					<value>
						<!-- Regular -->
						<Mashed_Ashlands_Ashlands>1</Mashed_Ashlands_Ashlands>
						<Mashed_Ashlands_GrazelandAshlands>2</Mashed_Ashlands_GrazelandAshlands>
						<Mashed_Ashlands_SwampAshlands>3</Mashed_Ashlands_SwampAshlands>
						<!-- Thriving -->
						<Mashed_Ashlands_ForestAshlands>4</Mashed_Ashlands_ForestAshlands>
						<Mashed_Ashlands_MarshAshlands>3</Mashed_Ashlands_MarshAshlands>
						<Mashed_Ashlands_MeadowAshlands>4</Mashed_Ashlands_MeadowAshlands>
						<!-- Volcanic -->
						<Mashed_Ashlands_VolcanicSulphurPitsAshlands>1</Mashed_Ashlands_VolcanicSulphurPitsAshlands>
					</value>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName="FF_Firefly"]/statBases</xpath>
					<value>
						<Mashed_Ashlands_AshResistance>1</Mashed_Ashlands_AshResistance>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>
