<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[Mashed_Ashlands_AshStorm]==========-->
	<ThoughtDef>
		<defName>Mashed_Ashlands_AshStorm</defName>
		<workerClass>Mashed_Ashlands.ThoughtWorker_AshStorm</workerClass>
		<stages>
			<li>
				<label>outside in ash storm</label>
				<description>I'm breathing in more ash than air!</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
		<nullifyingTraits>
			<li>Mashed_Ashlands_AshStormLover</li>
		</nullifyingTraits>
		<nullifyingGenes>
			<li MayRequire="Ludeon.RimWorld.Biotech">MorrowRim_Gene_AshMoodResistance</li>
			<li MayRequire="Ludeon.RimWorld.Biotech">Mashed_Ashlands_AshResistance_Perfect</li>
		</nullifyingGenes>
	</ThoughtDef>
	<!-- ==========[Mashed_Ashlands_AshStormLover]==========-->
	<ThoughtDef>
		<defName>Mashed_Ashlands_AshStormLover</defName>
		<workerClass>Mashed_Ashlands.ThoughtWorker_AshStormLover</workerClass>
		<stages>
			<li>
				<label>outside in ash storm and really loving it!</label>
				<description>My lungs are being filled with ash! My skin is being worn down! This is the greatest feeling ever!</description>
				<baseMoodEffect>12</baseMoodEffect>
			</li>
			<li>
				<label>outside in ash storm and loving it!</label>
				<description>I can breathe perfectly fine, but at least I feel the ash wearing away at my skin!</description>
				<baseMoodEffect>6</baseMoodEffect>
			</li>
			<li>
				<label>outside in dust storm and loving it!</label>
				<description>I can breathe perfectly fine, but at least I feel the ash slowly wearing away at my skin!</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
		</stages>
		<requiredTraits>
			<li>Mashed_Ashlands_AshStormLover</li>
		</requiredTraits>
	</ThoughtDef>
