	<!-- ==========[Mashed_Ashlands_OutsideInBlightStorm]==========-->
	<ThoughtDef>
		<defName>Mashed_Ashlands_OutsideInBlightStorm</defName>
		<durationDays>0.6</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>outside in blight storm</label>
				<description>The sky... The wind... The... voices? This is all wrong!</description>
				<baseMoodEffect>-6</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
	<!-- ==========[Mashed_Ashlands_OutsideInDustStorm]==========-->
	<ThoughtDef>
		<defName>Mashed_Ashlands_OutsideInDustStorm</defName>
		<durationDays>0.4</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>outside in dust storm</label>
				<description>There's ash getting everywhere!</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>
		<nullifyingTraits>
			<li>Mashed_Ashlands_AshStormLover</li>
		</nullifyingTraits>
		<nullifyingGenes>
			<li MayRequire="Ludeon.RimWorld.Biotech">MorrowRim_Gene_AshMoodResistance</li>
			<li MayRequire="Ludeon.RimWorld.Biotech">Mashed_Ashlands_AshResistance_Perfect</li>
		</nullifyingGenes>
	</ThoughtDef>
	<!-- ==========[Mashed_Ashlands_OutsideInSulphurRain]==========-->
	<ThoughtDef>
		<defName>Mashed_Ashlands_OutsideInSulphurRain</defName>
		<durationDays>0.4</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>outside in sulphuric rain</label>
				<description>Ow! Why does the rain burn?</description>
				<baseMoodEffect>-4</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
