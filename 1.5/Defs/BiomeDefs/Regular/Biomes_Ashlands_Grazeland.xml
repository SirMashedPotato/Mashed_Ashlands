<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<BiomeDef ParentName="Mashed_Ashlands_AshlandsRegularBase">
		<defName>Mashed_Ashlands_GrazelandAshlands</defName>
		<label>ashland grazelands</label>
		<description>Flat pastoral land, covered in grass and occasional mushroom trees. These plains were once covered in clouds of ash from a nearby volcano, now the clouds have settled, and much of the ash has been absorbed into the ground. Much like the ashlands, the terrain here is highly fertile, though large swathes of this fertility have been lost over time due to erosion.\n\nThe landscape is largely dominated by wickwheat and hackle-lo, and large herds of grazing herbivores can often be found here.</description>
		<workerClass>Mashed_Ashlands.BiomeWorker_GrazelandAshlands</workerClass>
		<texture>World/Biomes/Mashed_Ashlands_GrazelandAshlands</texture>
		<modExtensions>
			<li Class="Mashed_Ashlands.BiomeProperties">
                <lateLoader>true</lateLoader>
				<restrictPlantsToTerrain>true</restrictPlantsToTerrain>
				<increasePollutedFertility>true</increasePollutedFertility>
				<terrainReplacers>
					<li>
						<originalTerrain>Gravel</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_AshGravel</replacedTerrain>
					</li>
					<li>
						<originalTerrain>Sand</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_AshSand</replacedTerrain>
					</li>
				</terrainReplacers>
				<roadReplacers>
					<li>
						<originalTerrain>PackedDirt</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_PackedAsh</replacedTerrain>
					</li>
				</roadReplacers>
				<dryToReplacers>
					<li>
						<originalTerrain>Gravel</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_AshGravel</replacedTerrain>
					</li>
					<li>
						<originalTerrain>Soil</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_AshSoil</replacedTerrain>
					</li>
				</dryToReplacers>
				<useAshlandCavePlants>true</useAshlandCavePlants>
				<useCustomCaveTerrain>true</useCustomCaveTerrain>
				<otherTerrainDef>Mashed_Ashlands_RichAshGravel</otherTerrainDef>
				<waterTerrainDef>WaterShallow</waterTerrainDef>
				<otherTerrainThreshold>0.25</otherTerrainThreshold>
				<waterThreshold>0.9</waterThreshold>
            </li>
			<li Class="BiomesKit.BiomesKitControls" MayRequire="odeum.wmbp">
				<forested>true</forested>
				<uniqueHills>true</uniqueHills>
				<forestDenseAbove>1800</forestDenseAbove>
				<forestSparseBelow>1100</forestSparseBelow>
				<materialRandomRotation>false</materialRandomRotation>
				<smallHillSizeMultiplier>1.5</smallHillSizeMultiplier>
				<largeHillSizeMultiplier>2</largeHillSizeMultiplier>
				<mountainSizeMultiplier>1.4</mountainSizeMultiplier>
				<impassableSizeMultiplier>1.3</impassableSizeMultiplier>
			</li>
		</modExtensions>
		<animalDensity>3</animalDensity>
		<plantDensity>0.4</plantDensity>
		<foragedFood>Mashed_Ashlands_RawHackleLo</foragedFood>
		<terrainsByFertility>
			<li>
				<terrain>Mashed_Ashlands_AshSoil</terrain>
				<min>-999</min>
				<max>0.45</max>
			</li>
			<li>
				<terrain>Mashed_Ashlands_GrazelandSoil</terrain>
				<min>0.45</min>
				<max>0.90</max>
			</li>
			<li>
				<terrain>Mashed_Ashlands_AshGravel</terrain>
				<min>0.90</min>
				<max>999</max>
			</li>
		</terrainsByFertility>
		<terrainPatchMakers>
			<li>
				<perlinFrequency>0.015</perlinFrequency>
				<thresholds>
					<li>
						<terrain>Mashed_Ashlands_RichAshSoil</terrain>
						<min>0.78</min>
						<max>0.86</max>
					</li>
					<li>
						<terrain>WaterShallow</terrain>
						<min>0.86</min>
						<max>99</max>
					</li>
				</thresholds>
			</li>
			<li>
				<perlinFrequency>0.035</perlinFrequency>
				<thresholds>
					<li>
						<terrain>Mashed_Ashlands_GrazelandSoil</terrain>
						<min>0.68</min>
						<max>0.86</max>
					</li>
					<li>
						<terrain>Mashed_Ashlands_AshGravel</terrain>
						<min>0.86</min>
						<max>99</max>
					</li>
					
				</thresholds>
			</li>
		</terrainPatchMakers>
		<wildPlants>
			<!-- Ground covers -->
			<Plant_Grass>10</Plant_Grass>
			<Mashed_Ashlands_Plant_AshlandGrass>18</Mashed_Ashlands_Plant_AshlandGrass>
			<Mashed_Ashlands_Plant_AshlandDuneGrass>2</Mashed_Ashlands_Plant_AshlandDuneGrass>
			<Mashed_Ashlands_Plant_AshlandFungus>2</Mashed_Ashlands_Plant_AshlandFungus>
			<Mashed_Ashlands_Plant_Ashreed>0.2</Mashed_Ashlands_Plant_Ashreed>
			<!-- Nutrition plants -->
			<Mashed_Ashlands_Plant_Wickwheat>0.7</Mashed_Ashlands_Plant_Wickwheat>
			<Mashed_Ashlands_Plant_HackleLo>0.7</Mashed_Ashlands_Plant_HackleLo>
			<Mashed_Ashlands_Plant_Marshmerrow>0.05</Mashed_Ashlands_Plant_Marshmerrow>
			<Mashed_Ashlands_Plant_Saltrice>0.05</Mashed_Ashlands_Plant_Saltrice>
			<!-- Resource plants -->
			<Mashed_Ashlands_Plant_AshlandHayGrass>0.2</Mashed_Ashlands_Plant_AshlandHayGrass>
			<Mashed_Ashlands_Plant_MuckSponge>0.05</Mashed_Ashlands_Plant_MuckSponge>
			<Mashed_Ashlands_Plant_ParasolBush>0.2</Mashed_Ashlands_Plant_ParasolBush>
			<Mashed_Ashlands_Plant_TramaShrub>0.1</Mashed_Ashlands_Plant_TramaShrub>
			<Mashed_Ashlands_Plant_Kreshweed>0.05</Mashed_Ashlands_Plant_Kreshweed>
			<!-- Aesthetic plants -->
			<Mashed_Ashlands_Plant_Stoneflower>0.2</Mashed_Ashlands_Plant_Stoneflower>
			<Mashed_Ashlands_Plant_WillowFlower>0.1</Mashed_Ashlands_Plant_WillowFlower>
			<!-- Trees -->
			<Mashed_Ashlands_Plant_TreeEmperorParasol>0.1</Mashed_Ashlands_Plant_TreeEmperorParasol>
			<Mashed_Ashlands_Plant_TreeAshland>0.2</Mashed_Ashlands_Plant_TreeAshland>
			<RB_Plant_Hive_Arctic MayRequire="sarg.rimbees">0.01</RB_Plant_Hive_Arctic>
			<RB_Plant_Hive_Icy MayRequire="sarg.rimbees">0.01</RB_Plant_Hive_Icy>
			<!-- ==========[Pollution]========== -->
			<!-- Polluted ground covers -->
			<Plant_GrayGrass MayRequire="Ludeon.RimWorld.Biotech">20</Plant_GrayGrass>
			<Mashed_Ashlands_GlowingEntoloma MayRequire="Ludeon.RimWorld.Biotech">2</Mashed_Ashlands_GlowingEntoloma>
			<Mashed_Ashlands_Plant_GlowingAshreed MayRequire="Ludeon.RimWorld.Biotech">0.2</Mashed_Ashlands_Plant_GlowingAshreed>
			<!-- Polluted nutrition plants -->
			<Mashed_Ashlands_Plant_ToxYam MayRequire="Ludeon.RimWorld.Biotech">0.2</Mashed_Ashlands_Plant_ToxYam>
			<Mashed_Ashlands_Plant_GlowingScathecraw MayRequire="Ludeon.RimWorld.Biotech">0.2</Mashed_Ashlands_Plant_GlowingScathecraw>
			<Mashed_Ashlands_Plant_GlowingParasolBush MayRequire="Ludeon.RimWorld.Biotech">0.2</Mashed_Ashlands_Plant_GlowingParasolBush>
			<!-- Polluted resource plants -->
			<Mashed_Ashlands_Plant_TramaMass MayRequire="Ludeon.RimWorld.Biotech">0.4</Mashed_Ashlands_Plant_TramaMass>
			<Mashed_Ashlands_Plant_WasteSponge MayRequire="Ludeon.RimWorld.Biotech">0.1</Mashed_Ashlands_Plant_WasteSponge>
			<!-- Polluted trees -->
			<Mashed_Ashlands_Plant_TreeEmperorToxisol MayRequire="Ludeon.RimWorld.Biotech">0.2</Mashed_Ashlands_Plant_TreeEmperorToxisol>
		</wildPlants>
		<wildAnimals>
			<!-- prey animals -->
			<Mashed_Ashlands_BantamGuar>0.2</Mashed_Ashlands_BantamGuar>
			<Mashed_Ashlands_Scuttler>0.2</Mashed_Ashlands_Scuttler>
			<Mashed_Ashlands_Vvardvark>0.2</Mashed_Ashlands_Vvardvark>
			<Mashed_Ashlands_AshHopper>0.1</Mashed_Ashlands_AshHopper>
			<!-- herd animals -->
			<Mashed_Ashlands_Shalk>0.6</Mashed_Ashlands_Shalk>
			<Mashed_Ashlands_ShalkFungal>0.1</Mashed_Ashlands_ShalkFungal>
			<Mashed_Ashlands_Guar>0.2</Mashed_Ashlands_Guar>
			<Mashed_Ashlands_NixOx>0.6</Mashed_Ashlands_NixOx>
			<!--<Mashed_Ashlands_NixSteed>0.05</Mashed_Ashlands_NixSteed>-->
			<!-- predators -->
			<Mashed_Ashlands_NixHound>0.1</Mashed_Ashlands_NixHound>
			<Mashed_Ashlands_Kagouti>0.1</Mashed_Ashlands_Kagouti>
			<Mashed_Ashlands_Alit>0.2</Mashed_Ashlands_Alit>
			<Mashed_Ashlands_CliffRacer>0.1</Mashed_Ashlands_CliffRacer>
			<!-- ESCP Trolls -->
			<ESCP_TrollBarren MayRequire="sirmashedpotato.escp.trolls">0.05</ESCP_TrollBarren>
			<ESCP_TrollPygmy MayRequire="sirmashedpotato.escp.trolls">0.05</ESCP_TrollPygmy>
			<ESCP_TrollHill MayRequire="sirmashedpotato.escp.trolls">0.025</ESCP_TrollHill>
			<ESCP_TrollRiver MayRequire="sirmashedpotato.escp.trolls">0.025</ESCP_TrollRiver>
			<ESCP_TrollCave MayRequire="sirmashedpotato.escp.trolls">0.025</ESCP_TrollCave>
			<ESCP_TrollCoastal MayRequire="sirmashedpotato.escp.trolls">0.025</ESCP_TrollCoastal>
			<ESCP_TrollUdyrfrykte MayRequire="sirmashedpotato.escp.trolls">0.01</ESCP_TrollUdyrfrykte>
			<!-- ESCP Spriggan-->
			<ESCP_Spriggan_Parasol MayRequire="pphhyy.escp.spriggan">0.05</ESCP_Spriggan_Parasol>
			<ESCP_Spriggan_Burnt MayRequire="pphhyy.escp.spriggan">0.025</ESCP_Spriggan_Burnt>
			<ESCP_Spriggan_Matron MayRequire="pphhyy.escp.spriggan">0.01</ESCP_Spriggan_Matron>
			<ESCP_Spriggan_EarthMother MayRequire="pphhyy.escp.spriggan">0.005</ESCP_Spriggan_EarthMother>
			<!-- special -->
		</wildAnimals>
		<pollutionWildAnimals>
			<Mashed_Ashlands_AshHopperGlowing MayRequire="Ludeon.RimWorld.Biotech">0.2</Mashed_Ashlands_AshHopperGlowing>
			<Mashed_Ashlands_ShalkGlowing MayRequire="Ludeon.RimWorld.Biotech">0.1</Mashed_Ashlands_ShalkGlowing>
			<Mashed_Ashlands_NetchGlowing MayRequire="Ludeon.RimWorld.Biotech">0.2</Mashed_Ashlands_NetchGlowing>
			<Mashed_Ashlands_NixOxGlowing MayRequire="Ludeon.RimWorld.Biotech">0.5</Mashed_Ashlands_NixOxGlowing>
			<!--<Mashed_Ashlands_NixSteedGlowing MayRequire="Ludeon.RimWorld.Biotech">0.1</Mashed_Ashlands_NixSteedGlowing>-->
			<Mashed_Ashlands_NixHoundGlowing MayRequire="Ludeon.RimWorld.Biotech">0.3</Mashed_Ashlands_NixHoundGlowing>
			<Mashed_Ashlands_CliffRacer>0.2</Mashed_Ashlands_CliffRacer>
		</pollutionWildAnimals>
	</BiomeDef>
</Defs>